<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_header_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:layout_centerHorizontal="true">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_user_header" android:layout_width="24dp" android:layout_height="24dp" android:src="@mipmap/mh_zql_user_default"/>
            <ImageView android:id="@+id/iv_member" android:visibility="gone" android:layout_width="@dimen/dp_12" android:layout_height="@dimen/dp_12" android:layout_alignRight="@+id/img_user_header" android:layout_alignBottom="@+id/img_user_header"/>
        </RelativeLayout>
        <ImageView android:id="@+id/bail_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/mh_zql_bail_icon"/>
        <ImageView android:id="@+id/img_top" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/mh_zql_top"/>
        <ImageView android:id="@+id/img_recommend" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/mh_zql_recommend"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF333333" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_title" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="8dp" android:text="关注微信公众号" android:maxLines="1" android:singleLine="true" android:layout_below="@+id/ll_header_layout"/>
    <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_key" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="544544545" android:maxLines="1" android:layout_below="@+id/tv_title" android:layout_alignLeft="@+id/tv_title"/>
    <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_reminding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="555555555" android:maxLines="1" android:layout_below="@+id/tv_key" android:layout_alignLeft="@+id/tv_title"/>
    <TextView android:textSize="@dimen/sp_17" android:textStyle="bold" android:textColor="@color/color_FF4343" android:gravity="center" android:id="@+id/tv_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="@dimen/dp_6" android:text="55555555" android:layout_below="@+id/tv_reminding" android:layout_alignLeft="@+id/tv_key"/>
    <TextView android:id="@+id/top_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/tv_money" android:layout_alignParentRight="true" style="@style/line"/>
    <TextView android:id="@+id/right_line" android:layout_width="1px" android:layout_height="wrap_content" android:layout_alignBottom="@+id/top_line" android:layout_alignParentTop="true" android:layout_alignParentRight="true" style="@style/line"/>
</RelativeLayout>

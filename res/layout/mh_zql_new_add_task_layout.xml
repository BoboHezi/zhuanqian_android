<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/color_f4f4f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/mh_zql_add_task_filter"/>
            <LinearLayout android:layout_marginTop="@dimen/dp_10" style="@style/rl_task_row">
                <TextView android:text="项目名称" android:minEms="4" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:id="@+id/et_project_name" android:hint="请选择项目名称" android:maxLines="1" android:singleLine="true" android:maxLength="10" android:drawableRight="@mipmap/mh_zql_arrow" android:layout_toRightOf="@+id/tv_project_name" style="@style/rl_task_content"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="@color/color_FF666666" android:id="@+id/tv_project_des" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_16" android:paddingBottom="@dimen/dp_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="项目说明："/>
            <View style="@style/add_task_line"/>
            <RelativeLayout style="@style/rl_task_row">
                <TextView android:id="@+id/tv_task_title" android:text="标题" android:minEms="4" style="@style/rl_task_title"/>
                <EditText android:id="@+id/et_task_title" android:hint="请输入悬赏标题，10字以内" android:maxLines="1" android:singleLine="true" android:maxLength="10" android:layout_toLeftOf="@+id/img_task_title_show" android:layout_toRightOf="@+id/tv_task_title" android:imeOptions="actionNext" android:textCursorDrawable="@drawable/mh_zql_common_cursor" style="@style/rl_task_content"/>
                <ImageView android:id="@+id/img_task_title_show" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:src="@mipmap/mh_zql_task_title_show" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:layout_alignParentBottom="true" style="@style/line"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/ll_superior_root" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingTop="@dimen/dp_12" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_superior_lab" android:text="关联上级" android:minEms="4" style="@style/rl_task_title"/>
                <TextView android:textColor="@color/color_FF333333" android:textColorHint="@color/color_ffbbbbbb" android:gravity="center_vertical" android:id="@+id/tv_superior_name" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="只有完成上级任务才能接后续单，无上级无需选择；" android:drawableRight="@mipmap/mh_zql_arrow" android:layout_toRightOf="@+id/tv_superior_lab"/>
                <View android:layout_marginTop="@dimen/dp_12" android:layout_below="@+id/tv_superior_name" style="@style/line"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/btn_pro" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingTop="@dimen/dp_12" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_pro_lab" android:text="保号期" android:minEms="4" style="@style/rl_task_title"/>
                <TextView android:textColor="@color/color_FF333333" android:textColorHint="@color/color_FF4343" android:gravity="center_vertical" android:id="@+id/tv_pro_data" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="只适用于收号，购物不能退款类项目，其他项目请勿添加，乱添加一律封号。" android:drawableRight="@mipmap/mh_zql_arrow" android:layout_toRightOf="@+id/tv_pro_lab"/>
                <View android:layout_marginTop="@dimen/dp_12" android:layout_below="@+id/tv_pro_data" style="@style/line"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_10">
                <TextView android:gravity="center_vertical" android:id="@+id/tv_task_remark" android:paddingTop="@dimen/dp_15" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="任务说明" android:minEms="4" android:layout_alignParentTop="true" android:layout_centerVertical="false" style="@style/rl_task_title"/>
                <EditText android:id="@+id/ed_task_remark" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="请添加任务相关备注信息，300字以内" android:maxLength="300" android:layout_toRightOf="@+id/tv_task_remark" android:textCursorDrawable="@drawable/mh_zql_common_cursor" style="@style/rl_task_content"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/ll_crowd_number" android:visibility="gone" style="@style/rl_task_row">
                <TextView android:id="@+id/tv_crowd_number_title" android:text="任务基数" style="@style/rl_task_title"/>
                <EditText android:gravity="center_vertical" android:id="@+id/tv_crowd_number" android:layout_width="match_parent" android:hint="单个任务包所包含的任务数" android:maxLength="8" android:drawableRight="@mipmap/mh_zql_arrow" android:drawablePadding="@dimen/dp_10" android:layout_toRightOf="@+id/tv_crowd_number_title" android:inputType="number" style="@style/rl_task_content"/>
                <View style="@style/line"/>
            </RelativeLayout>
            <RelativeLayout style="@style/rl_task_row">
                <TextView android:id="@+id/tv_num" android:text="悬赏数量" style="@style/rl_task_title"/>
                <EditText android:id="@+id/et_task_count" android:singleLine="true" android:maxLength="10" android:layout_toRightOf="@+id/tv_num" android:inputType="number" android:imeOptions="actionDone" android:textCursorDrawable="@drawable/mh_zql_common_cursor" style="@style/rl_task_content"/>
                <View android:layout_alignParentBottom="true" style="@style/line"/>
            </RelativeLayout>
            <RelativeLayout style="@style/rl_task_row">
                <TextView android:id="@+id/tv_price" android:text="悬赏单价" style="@style/rl_task_title"/>
                <EditText android:id="@+id/et_price" android:hint="最低出价0.1元，不同任务不同最低价" android:singleLine="true" android:maxLength="10" android:layout_toRightOf="@+id/tv_price" android:inputType="numberDecimal" android:imeOptions="actionNext" android:textCursorDrawable="@drawable/mh_zql_common_cursor" style="@style/rl_task_content"/>
                <View android:layout_alignParentBottom="true" style="@style/line"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/ll_fee_money" style="@style/rl_task_row">
                <TextView android:layout_gravity="center_vertical" android:id="@+id/tv_fee_title" android:text="预付赏金" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:id="@+id/et_task_fee" android:layout_width="0dp" android:hint="悬赏佣金+服务费" android:layout_weight="1" style="@style/rl_task_content"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tv_to_member_center" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textSize="12sp" android:textColor="#ff999999" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="降低" android:drawableLeft="@mipmap/mh_zql_i2"/>
                    <TextView android:textSize="12sp" android:textColor="#ff999999" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="服务费"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:layout_marginTop="@dimen/dp_10" style="@style/rl_task_row">
                <TextView android:id="@+id/tv_time" android:text="接单限时" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:id="@+id/tv_limit_time" android:layout_width="match_parent" android:drawableRight="@mipmap/mh_zql_arrow" android:layout_toRightOf="@+id/tv_time" style="@style/rl_task_content"/>
                <View android:layout_alignParentBottom="true" style="@style/line"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/ll_check_time" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingTop="@dimen/dp_12" android:paddingBottom="@dimen/dp_12" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/color_FF333333" android:id="@+id/tv_check_time_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="审核时间" android:minEms="4"/>
                <TextView android:textColor="@color/color_FF333333" android:id="@+id/tv_check_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_5" android:text="" android:layout_toRightOf="@+id/tv_check_time_title"/>
                <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF4343" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="若未按时审核，悬赏单将自动通过，发放佣金！" android:layout_toRightOf="@+id/tv_check_time_title" android:layout_below="@+id/tv_check_time" android:layout_alignLeft="@+id/tv_check_time"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:src="@mipmap/mh_zql_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:layout_marginLeft="@dimen/dp_16" style="@style/line"/>
            <LinearLayout android:id="@+id/ll_repeated" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingTop="@dimen/dp_10" android:paddingBottom="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="做单次数" style="@style/rl_task_title"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/radioGroupID" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_do_task_1" android:layout_width="wrap_content" android:layout_height="match_parent">
                            <ImageView android:id="@+id/img_do_task_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn"/>
                            <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每人一次"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_do_task_2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="25dp">
                            <ImageView android:id="@+id/img_do_task_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn"/>
                            <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每人多次"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_do_task_3" android:layout_width="wrap_content" android:layout_height="match_parent">
                            <ImageView android:id="@+id/img_do_task_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn"/>
                            <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每日一次"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_do_task_4" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="25dp">
                            <ImageView android:id="@+id/img_do_task_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn"/>
                            <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每日多次"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/ll_repeated_count" android:visibility="gone" style="@style/rl_task_row">
                <TextView android:id="@+id/tv_repeat_title" android:text="重复次数" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:id="@+id/tv_repeated_count" android:layout_width="match_parent" android:drawableRight="@mipmap/mh_zql_arrow" android:drawablePadding="@dimen/dp_10" android:layout_toRightOf="@+id/tv_check_time_title" style="@style/rl_task_content"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/ll_bag_count" android:visibility="gone" style="@style/rl_task_row">
                <TextView android:text="重复次数" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:layout_width="match_parent" android:text="不限" android:drawablePadding="@dimen/dp_10" android:layout_toRightOf="@+id/tv_check_time_title" style="@style/rl_task_content"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/ll_batch_mode" android:visibility="gone" android:layout_marginTop="@dimen/dp_10" style="@style/rl_task_row">
                <TextView android:id="@+id/tv_batch_mode_title" android:text="提交方式" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:id="@+id/tv_batch_mode" android:layout_width="match_parent" android:hint="选择提交方式" android:drawableRight="@mipmap/mh_zql_arrow" android:drawablePadding="@dimen/dp_10" android:layout_toRightOf="@+id/tv_batch_mode_title" style="@style/rl_task_content"/>
                <View style="@style/line"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/ll_bag_info" android:visibility="gone" style="@style/rl_task_row">
                <TextView android:id="@+id/tv_bag_info_title" android:text="指定包工头" style="@style/rl_task_title"/>
                <TextView android:gravity="center_vertical" android:id="@+id/tv_bag_info" android:layout_width="match_parent" android:hint="选择指定包工头" android:drawableRight="@mipmap/mh_zql_arrow" android:drawablePadding="@dimen/dp_10" android:layout_toRightOf="@+id/tv_bag_info_title" style="@style/rl_task_content"/>
                <View style="@style/line"/>
            </RelativeLayout>
            <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF333333" android:gravity="center_vertical" android:id="@+id/tv_step_tip" android:background="@color/white" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="47dp" android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="1dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/recy_step" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:background="@color/white" android:layout_width="match_parent" android:layout_height="134dp">
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/btn_task_dark" android:gravity="center" android:id="@+id/btn_add_step" android:background="@drawable/mh_zql_task_filter_pre" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_16" android:layout_width="240dp" android:layout_height="36dp" android:text="添加步骤"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_agree" android:background="@color/transparent" android:layout_marginTop="26dp" style="@style/add_task_row">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:src="@drawable/mh_zql_check_bg"/>
                <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="我已阅读并同意遵守《发布规则》的全部内容"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="@color/text_color_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_32" android:layout_marginRight="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_32" android:text="@string/create_task_tip" android:lineSpacingExtra="@dimen/dp_5"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="48dp">
        <LinearLayout android:gravity="center" android:id="@+id/tv_preview" android:layout_width="114dp" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF333333" android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="预览" android:drawableLeft="@mipmap/mh_zql_task_preview" android:drawablePadding="5dp"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@color/text_color_btn" android:gravity="center" android:id="@+id/tv_publish" android:background="@color/btn_task_dark" android:layout_width="match_parent" android:layout_height="match_parent" android:text="申请发布" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_feel"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_title"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/mh_zql_white_shape"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_fee_title"
            android:layout_width="186dp"
            android:layout_height="@dimen/dp_32"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/mh_zql_union_tiitle"
            android:gravity="center"
            android:text="我的分佣比例"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_fee_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fee_title"
            android:layout_marginTop="23dp"
            android:text="设置我的分佣比例（最多40%）"
            android:textColor="#ff3b3839"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_fee_bf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@+id/tv_fee_tip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="%"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ed_fee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@+id/tv_fee_tip"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/tv_fee_bf"
            android:background="@drawable/mh_zql_union_ed"
            android:inputType="number"
            android:maxLength="2"
            android:paddingLeft="10dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_below="@+id/ed_fee"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/mh_zql_union_btn"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_below="@+id/ed_fee"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/mh_zql_union_btn"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>

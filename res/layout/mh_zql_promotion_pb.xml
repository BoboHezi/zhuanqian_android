<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <androidx.core.widget.NestedScrollView android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_real_name" android:background="#14f15b4c" android:visibility="gone" android:layout_width="match_parent" android:layout_height="56dp">
                <TextView android:textColor="#f15b4c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:text="你还未进行实名认证，进行实名认证成功后才能开始发布网推资源。" android:layout_weight="1"/>
                <TextView android:textSize="14sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/btn_go_real_name" android:background="@drawable/mh_zql_go_real_name" android:layout_width="66dp" android:layout_height="34dp" android:layout_marginLeft="@dimen/dp_20" android:layout_marginRight="@dimen/dp_16" android:text="去认证"/>
            </LinearLayout>
            <EditText android:textSize="14sp" android:textColorHint="#ffbcbfc2" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/ed_content" android:background="@color/transparent" android:paddingLeft="@dimen/dp_16" android:paddingTop="@dimen/dp_10" android:paddingBottom="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp" android:hint="请输入网推标题" android:maxLength="300"/>
            <TextView android:textSize="13sp" android:textColor="#bcbfc2" android:gravity="right" android:id="@+id/tv_content_count" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:text=""/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcy_img" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_20"/>
            <TextView android:background="#f5f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dp_10" android:layout_marginTop="@dimen/dp_15"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_pay_mode" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp_16">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="付款方式" android:minEms="4"/>
                <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="center_vertical" android:id="@+id/tv_pay_mode" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_5" android:hint="请选择付款方式" android:drawableRight="@mipmap/mh_zql_person_arrow" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" style="@style/line"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_account_mode" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp_16">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="结算方式" android:minEms="4"/>
                <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="center_vertical" android:id="@+id/tv_account_mode" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_5" android:hint="请选择结算方式" android:drawableRight="@mipmap/mh_zql_person_arrow" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" style="@style/line"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_validity_time" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp_16">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="有效期至" android:minEms="4"/>
                <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="center_vertical" android:id="@+id/tv_validity_time" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_5" android:hint="请选择截止日期" android:drawableRight="@mipmap/mh_zql_person_arrow" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:layout_marginTop="@dimen/dp_15" style="@style/line_space"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="手机号" android:minEms="4"/>
                <EditText android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="center_vertical" android:id="@+id/ed_phone" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_5" android:hint="请输入联系手机号" android:maxLength="11" android:layout_weight="1" android:inputType="number"/>
            </LinearLayout>
            <TextView android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" style="@style/line"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="微信" android:minEms="4"/>
                <EditText android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="center_vertical" android:id="@+id/ed_wx" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_5" android:hint="请输入联系微信" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" style="@style/line"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="QQ" android:minEms="4"/>
                <EditText android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="center_vertical" android:id="@+id/ed_qq" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_5" android:hint="请输入QQ" android:layout_weight="1"/>
            </LinearLayout>
            <TextView style="@style/line_space"/>
            <EditText android:textSize="15sp" android:textColor="@color/color_FF333333" android:textColorHint="#bcbfc2" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/ed_remark" android:background="@color/transparent" android:paddingTop="@dimen/dp_10" android:paddingBottom="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" android:minHeight="@dimen/dp_100" android:hint="请输入详细说明信息" android:maxLength="500"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_agree" android:background="@color/transparent" android:layout_marginTop="26dp" style="@style/add_task_row">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:src="@drawable/mh_zql_check_bg"/>
                <TextView android:textSize="13sp" android:textColor="#bcbfc2" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="我已阅读并同意遵守发布规则的全部内容"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="@color/text_color_1" android:background="@drawable/mh_zql_bg_add_task_tip" android:padding="@dimen/dp_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_32" android:layout_marginRight="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_32" android:text="@string/create_task_tip" android:lineSpacingExtra="@dimen/dp_5"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="48dp">
        <TextView android:textSize="@dimen/sp_16" android:textColor="@color/btn_task_dark" android:gravity="center" android:id="@+id/tv_preview" android:layout_width="114dp" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_10" android:text="预览信息" android:drawablePadding="5dp"/>
        <RelativeLayout android:id="@+id/tv_publish" android:background="@color/btn_task_dark" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="申请发布" android:layout_weight="1" android:layout_centerHorizontal="true"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_5" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
                <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_pay_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
                <TextView android:textSize="10sp" android:textColor="@color/white" android:id="@+id/tv_pay_old_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:text="" android:layout_toRightOf="@+id/tv_pay_price" android:layout_alignBottom="@+id/tv_pay_price"/>
                <TextView android:textSize="14sp" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="5dp" android:layout_toRightOf="@+id/tv_pay_price" android:layout_alignLeft="@+id/tv_pay_old_price" android:layout_alignRight="@+id/tv_pay_old_price" android:layout_alignBottom="@+id/tv_pay_old_price"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/select_bar_layout" android:background="@color/picture_color_grey" android:layout_width="match_parent" android:layout_height="45dp" android:layout_alignParentBottom="true">
    <TextView android:enabled="false" android:textSize="14sp" android:textColor="@color/picture_list_text_color" android:gravity="center" android:id="@+id/picture_id_preview" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/picture_preview" android:layout_centerVertical="true"/>
    <CheckBox android:textSize="14sp" android:textColor="@color/picture_color_white" android:gravity="center" android:id="@+id/cb_original" android:background="@color/picture_color_transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:button="@color/picture_color_transparent" android:text="@string/picture_original_image" android:layout_centerInParent="true" android:layout_centerVertical="true" android:paddingStart="5dp"/>
    <TextView android:enabled="false" android:textSize="14sp" android:textColor="@color/picture_list_text_color" android:gravity="center" android:id="@+id/picture_tv_ok" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/picture_please_select" android:layout_centerVertical="true" android:paddingEnd="12dp" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="12sp" android:textColor="@color/picture_color_white" android:gravity="center" android:id="@+id/tv_media_num" android:background="@drawable/picture_num_oval" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/picture_tv_ok"/>
    <TextView android:enabled="false" android:textSize="16sp" android:textColor="@color/picture_color_white" android:gravity="center" android:id="@+id/tv_selected" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/picture_select" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="12sp" android:textColor="@color/picture_color_white" android:gravity="center" android:id="@+id/check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/tv_selected"/>
    <View android:id="@+id/btnCheck" android:background="@color/picture_color_transparent" android:layout_width="80dp" android:layout_height="match_parent" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>

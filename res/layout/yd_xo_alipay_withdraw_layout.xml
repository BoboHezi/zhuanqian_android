<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f6"
    android:orientation="vertical">

    <include layout="@layout/yd_xo_common_white_header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_withdrawal_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:gravity="center_vertical"
                    android:text="支付宝账户"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16" />

                <View style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="收款姓名"
                        android:singleLine="true"
                        android:textColor="@color/color_FF333333"
                        android:textColorHint="@color/color_cccccc"
                        android:textCursorDrawable="@drawable/yd_xo_common_cursor"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/et_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="支付宝账户/手机号"
                        android:singleLine="true"
                        android:textColor="@color/color_FF333333"
                        android:textColorHint="@color/color_cccccc"
                        android:textCursorDrawable="@drawable/yd_xo_common_cursor"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/btn_change_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/yd_xo_arrow"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="更换"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_zfb_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_10"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bind_wx"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关联微信"
                    android:textColor="@color/color_FF333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_invite_arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/yd_xo_me_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wx_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信实名"
                        android:textColor="#ff333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ed_wx_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请输入微信实名的姓名"
                        android:paddingLeft="@dimen/dp_32"
                        android:textColor="@color/color_FF333333"
                        android:textColorHint="@color/color_FF999999"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_name_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/yd_xo_name_edit" />
                </LinearLayout>

                <TextView
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="0.5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/img_wx_header"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/yd_xo_user_default" />

                    <TextView
                        android:id="@+id/tv_wx_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_FF333333"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/tv_style_1"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/yd_xo_arrow"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="更换"
                        android:textColor="@color/color_FF333333" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="提现金额"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_33" />

                    <com.jdqy.zqyd.widget.ClearEditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:textColor="@color/color_FF333333"
                        android:textColorHint="@color/color_cccccc"
                        android:textCursorDrawable="@drawable/yd_xo_cursor_bg"
                        android:textSize="@dimen/sp_37" />
                </LinearLayout>

                <View style="@style/line" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_32"
                    android:background="@drawable/yd_xo_feedback_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@drawable/yd_xo_feedback_text_bg"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:text="温馨提示"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

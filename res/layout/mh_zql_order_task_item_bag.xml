<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="16dp"
            android:src="@mipmap/mh_zql_user_default" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:singleLine="true"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_task_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:textColor="@color/color_FF4343"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_title"
            android:layout_alignLeft="@+id/tv_task_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_FF666666"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_task_time"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_type"
            android:layout_alignLeft="@+id/tv_type"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:text="111111"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_task_count"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_task_time"
            android:layout_alignLeft="@+id/tv_task_time"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:text="222"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/btn_bag_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_task_count"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/mh_zql_order_task_btn_bg"
            android:gravity="center"
            android:text="做单记录"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_task_count"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_16"
            android:text="已过期"
            android:textColor="@color/color_ff8f2b"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_count"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/btn_bag_batch_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="做单记录"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_bag_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="审核中"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_bag_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_bag_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="不合格"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_bag_give_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="放弃"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_bag_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="结算"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_bag_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="提交做单"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="14dp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_icon" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="16dp" android:src="@mipmap/mh_zql_user_default"/>
        <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="14dp" android:singleLine="true" android:layout_toRightOf="@+id/iv_icon"/>
        <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF4343" android:id="@+id/tv_task_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="14dp" android:layout_marginRight="16dp" android:singleLine="true" android:layout_alignParentRight="true"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF666666" android:id="@+id/tv_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_task_title" android:layout_alignLeft="@+id/tv_task_title"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:gravity="center" android:id="@+id/tv_task_time" android:layout_width="wrap_content" android:layout_height="21dp" android:layout_marginTop="@dimen/dp_3" android:text="111111" android:layout_below="@+id/tv_type" android:layout_alignLeft="@+id/tv_type"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:gravity="center" android:id="@+id/tv_task_count" android:layout_width="wrap_content" android:layout_height="21dp" android:layout_marginTop="@dimen/dp_3" android:text="222" android:layout_below="@+id/tv_task_time" android:layout_alignLeft="@+id/tv_task_time"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_record" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_16" android:text="做单记录" android:layout_alignBottom="@+id/tv_task_count" android:layout_alignParentRight="true"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_ff8f2b" android:layout_gravity="center" android:id="@+id/tv_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:text="已过期" android:layout_alignBottom="@+id/tv_task_count" android:layout_alignParentRight="true"/>
        <LinearLayout android:paddingRight="@dimen/dp_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_task_count" android:layout_alignParentRight="true">
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_batch_rd" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="@dimen/dp_10" android:text="做单记录"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_check" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="@dimen/dp_10" android:text="审核中"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_finish" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="@dimen/dp_10" android:text="已完成"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_reject" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="@dimen/dp_10" android:text="不合格"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_give_up" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="@dimen/dp_10" android:text="放弃"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_end" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="@dimen/dp_10" android:text="结算"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_bag_commit" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/dp_10" android:text="提交做单"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="14dp" android:layout_alignParentBottom="true" style="@style/line"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/mh_zql_white_shape_2" android:layout_width="312dp" android:layout_height="wrap_content">
        <RelativeLayout android:background="@mipmap/mh_zql_task_tip_top" android:layout_width="match_parent" android:layout_height="64dp">
            <TextView android:textSize="21sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="赚赏金，三步走" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/btn_close" android:padding="@dimen/dp_5" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="7dp" android:layout_marginRight="7dp" android:src="@mipmap/mh_zql_close_5" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp">
            <TextView android:text="1" style="@style/tv_step_number"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="浏览悬赏"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textColor="@color/color_FF666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="44dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:text="请仔细阅读悬赏限制条件及要求，确保能完成后点击页面底部的“点击报名”按钮，先报名再做单，还可以查看做单视频，更加全面了解做单要求。"/>
        <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp">
            <TextView android:text="2" style="@style/tv_step_number"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="按步骤操作"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textColor="@color/color_FF666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="44dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:text="请根据步骤要求进行操作，并在验证图步骤截图上传提交验证。"/>
        <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp">
            <TextView android:text="3" style="@style/tv_step_number"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="正确提交"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textColor="@color/color_FF666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="44dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:text="检查上传截图及验证文字内容，确认无误后点击页面底部“提交验证”按钮提交，等待审核通过，发放赏金。"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_agree" android:paddingLeft="44dp" android:paddingTop="@dimen/dp_16" android:paddingBottom="16dp" style="@style/add_task_row">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_check_bg"/>
            <TextView android:textSize="13sp" android:textColor="@color/color_FF333333" android:layout_gravity="center_vertical" android:id="@+id/tv_agree_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="不再提示"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="32dp" android:layout_marginTop="7dp" android:layout_marginBottom="20dp">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_1" android:gravity="center" android:id="@+id/btn_new_tip" android:background="@drawable/mh_zql_task_light" android:layout_width="80dp" android:layout_height="match_parent" android:text="新人须知"/>
            <TextView android:textSize="16sp" android:textColor="@color/text_color_1" android:gravity="center" android:id="@+id/btn_video" android:background="@drawable/mh_zql_task_light" android:layout_width="80dp" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="新手视频"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_start" android:background="@drawable/mh_zql_chat_btn_send" android:layout_width="80dp" android:layout_height="match_parent" android:text="开始赚钱"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="16dp"
            android:src="@mipmap/mh_zql_user_default" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:singleLine="true"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_task_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:textColor="@color/color_FF4343"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_title"
            android:layout_alignLeft="@+id/tv_task_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_FF666666"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_task_time"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_type"
            android:layout_alignLeft="@+id/tv_type"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignBottom="@+id/tv_task_time"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/btn_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_give_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="放弃"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mh_zql_order_task_btn_bg"
                android:gravity="center"
                android:text="查看原因"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:id="@+id/btn_draw_package"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/mh_zql_order_task_btn_bg"
            android:gravity="center"
            android:text="领取红包"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_other_task"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/mh_zql_order_task_btn_bg"
            android:gravity="center"
            android:text="报名后续单"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/mh_zql_order_task_btn_bg"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />
    </LinearLayout>

    <View
        style="@style/line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="16dp" />
</LinearLayout>

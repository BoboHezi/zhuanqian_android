<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff3f3f3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="09月05日  17:50"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/yd_xo_message_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_12">

        <ImageView
            android:id="@+id/img_red_package"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/yd_xo_system_red_packet" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toRightOf="@+id/img_red_package"
            android:text="系统升级公告，业务范围影响通知"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/btn_get_red"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_message_title"
            android:layout_alignRight="@+id/tv_message_title"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/yd_xo_chat_btn_send"
            android:gravity="center"
            android:text="领取红包"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_title"
            android:layout_alignLeft="@+id/tv_message_title"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#ff4343"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>
</LinearLayout>

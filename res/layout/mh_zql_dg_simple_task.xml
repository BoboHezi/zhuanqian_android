<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/mh_zql_bg_simple_task" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_24" android:layout_marginRight="@dimen/dp_24" android:minHeight="300dp">
        <RelativeLayout android:background="@mipmap/mh_zql_dg_simple_top" android:layout_width="match_parent" android:layout_height="78dp">
            <LinearLayout android:id="@+id/ll_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_centerHorizontal="true">
                <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="完成立得¥"/>
                <TextView android:textSize="24sp" android:textColor="@color/white" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="下一波倒计时：09 时 23 分 56 秒" android:layout_below="@+id/ll_money" android:layout_centerHorizontal="true"/>
            <ImageView android:id="@+id/btn_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/mh_zql_close_8" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcy_task" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_FF999999" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_15" android:layout_marginBottom="@dimen/dp_15" android:text="关闭后请到【每日福利】页面查看" android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>

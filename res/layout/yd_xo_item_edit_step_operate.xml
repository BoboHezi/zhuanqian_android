<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="@drawable/yd_xo_bottom_line"
    android:orientation="vertical">

    <TextView
        style="@style/line"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_del"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/yd_xo_step_del"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="删除"
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_down"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/yd_xo_step_down"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="下移"
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_up"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/yd_xo_step_up"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="上移"
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/yd_xo_edit"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="编辑"
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_ffdbdbdb" />
</LinearLayout>

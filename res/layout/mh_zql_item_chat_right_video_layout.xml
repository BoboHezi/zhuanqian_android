<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_date" android:background="#dddddf" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/img_user_header" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="8dp" android:layout_marginRight="16dp" android:src="@mipmap/mh_zql_user_default" android:layout_below="@+id/tv_date" android:layout_alignParentRight="true"/>
    <TextView android:textSize="9sp" android:gravity="center" android:id="@+id/tv_user_flag" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_below="@+id/img_user_header" android:layout_alignLeft="@+id/img_user_header"/>
    <ImageView android:id="@+id/img_chat" android:layout_width="90dp" android:layout_height="160dp" android:layout_toLeftOf="@+id/img_user_header" android:layout_alignTop="@+id/img_user_header"/>
    <ImageView android:layout_width="38dp" android:layout_height="38dp" android:layout_marginTop="61dp" android:layout_marginRight="26dp" android:src="@mipmap/mh_zql_chat_video_play" android:layout_alignTop="@+id/img_chat" android:layout_alignRight="@+id/img_chat"/>
    <TextView android:textSize="11sp" android:textColor="@color/color_FC5F44" android:id="@+id/tv_unread_flag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="未读消息" android:layout_toLeftOf="@+id/img_chat" android:layout_alignTop="@+id/img_chat"/>
</RelativeLayout>

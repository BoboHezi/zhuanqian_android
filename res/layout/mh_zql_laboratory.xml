<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/mh_zql_common_white_header_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#facc2e">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/mh_zql_platform_banner_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/mh_zql_white_shape_8"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ll_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_logo_game"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/mh_zql_platform_game" />

                    <LinearLayout
                        android:id="@+id/ll_task_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_game_title"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_toRightOf="@+id/img_logo_game">

                        <TextView
                            android:id="@+id/tv_cmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_FF333333"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_task_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff67696b"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_game_status"
                        android:layout_width="88dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="center"
                        android:text="去完成"
                        android:textSize="@dimen/dp_16" />

                    <com.youchen.mhlite.widget.TextBoldStyle
                        android:id="@+id/tv_game_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_logo_game"
                        android:layout_toRightOf="@+id/img_logo_game"
                        android:text="每天3个淘金游戏奖1元"
                        android:textColor="@color/color_FF333333"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/line"
                        android:layout_below="@+id/img_logo_game"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_reward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_reward_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/mh_zql_platform_crowd" />

                    <TextView
                        android:id="@+id/tv_reward_status"
                        android:layout_width="88dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/mh_zql_daily_status_0"
                        android:gravity="center"
                        android:text="去查看"
                        android:textColor="#ff5501"
                        android:textSize="@dimen/dp_16" />

                    <TextView
                        android:id="@+id/tv_reward_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_reward_title"
                        android:layout_alignLeft="@+id/tv_reward_title"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/tv_reward_status"
                        android:text="批量做单，适合团队长、工作室等私域流量主"
                        android:textColor="@color/color_FF999999"
                        android:textSize="13sp" />

                    <com.youchen.mhlite.widget.TextBoldStyle
                        android:id="@+id/tv_reward_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_reward_logo"
                        android:layout_toRightOf="@+id/img_reward_logo"
                        android:text="众包悬赏"
                        android:textColor="@color/color_FF333333"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/line"
                        android:layout_below="@+id/tv_reward_des"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_union"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_union_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/mh_zql_platform_alliance" />

                    <TextView
                        android:id="@+id/tv_union_status"
                        android:layout_width="88dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/mh_zql_daily_status_0"
                        android:gravity="center"
                        android:text="去查看"
                        android:textColor="#ff5501"
                        android:textSize="@dimen/dp_16" />

                    <TextView
                        android:id="@+id/tv_union_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_union_title"
                        android:layout_alignLeft="@+id/tv_union_title"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/tv_union_status"
                        android:text="您的最佳变现渠道，适合自有APP，公众号，小程序等流量主"
                        android:textColor="@color/color_FF999999"
                        android:textSize="13sp" />

                    <com.youchen.mhlite.widget.TextBoldStyle
                        android:id="@+id/tv_union_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_union_logo"
                        android:layout_toRightOf="@+id/img_union_logo"
                        android:text="赚钱合伙人"
                        android:textColor="@color/color_FF333333"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/line"
                        android:layout_below="@+id/tv_union_des"
                        android:layout_marginTop="@dimen/dp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_share_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/mh_zql_platform_share" />

                    <TextView
                        android:id="@+id/tv_share_status"
                        android:layout_width="88dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/mh_zql_daily_status_0"
                        android:gravity="center"
                        android:text="去完成"
                        android:textColor="#ff5501"
                        android:textSize="@dimen/dp_16" />

                    <TextView
                        android:id="@+id/tv_share_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_share_title"
                        android:layout_alignLeft="@+id/tv_share_title"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/tv_share_status"
                        android:text="分享拿奖金，更有额外排名奖"
                        android:textColor="@color/color_FF999999"
                        android:textSize="13sp" />

                    <com.youchen.mhlite.widget.TextBoldStyle
                        android:id="@+id/tv_share_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_share_logo"
                        android:layout_toRightOf="@+id/img_share_logo"
                        android:text="每日分享高额佣金"
                        android:textColor="@color/color_FF333333"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/line"
                        android:layout_below="@+id/img_share_logo"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_mt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_mt_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/mh_zql_platform_mt" />

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/mh_zql_daily_status_0"
                        android:gravity="center"
                        android:text="去领取"
                        android:textColor="#ff5501"
                        android:textSize="@dimen/dp_16" />

                    <TextView
                        android:id="@+id/tv_mt_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_mt_title"
                        android:layout_alignLeft="@+id/tv_mt_title"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="使用优惠券下单，次日返利3%"
                        android:textColor="@color/color_FF999999"
                        android:textSize="13sp" />

                    <com.youchen.mhlite.widget.TextBoldStyle
                        android:id="@+id/tv_mt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_mt_logo"
                        android:layout_toRightOf="@+id/img_mt_logo"
                        android:text="美团外卖优惠券"
                        android:textColor="@color/color_FF333333"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_weight="1">
        <RelativeLayout android:background="#facc2e" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="400dp" android:src="@mipmap/mh_zql_platform_banner_top" android:scaleType="centerCrop"/>
            <LinearLayout android:orientation="vertical" android:background="@drawable/mh_zql_white_shape_8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="180dp" android:layout_marginRight="15dp" android:layout_marginBottom="@dimen/dp_30">
                <RelativeLayout android:id="@+id/ll_game" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_24">
                    <ImageView android:id="@+id/img_logo_game" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_10" android:src="@mipmap/mh_zql_platform_game" android:layout_centerVertical="true"/>
                    <LinearLayout android:id="@+id/ll_task_count" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:layout_toRightOf="@+id/img_logo_game" android:layout_below="@+id/tv_game_title">
                        <TextView android:textSize="13sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_cmp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
                        <TextView android:textSize="13sp" android:textColor="#ff67696b" android:id="@+id/tv_task_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/dp_16" android:gravity="center" android:id="@+id/tv_game_status" android:layout_width="88dp" android:layout_height="36dp" android:layout_marginRight="@dimen/dp_16" android:text="去完成" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <com.youchen.mhlite.widget.TextBoldStyle android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_game_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每天3个淘金游戏奖1元" android:layout_toRightOf="@+id/img_logo_game" android:layout_alignTop="@+id/img_logo_game"/>
                    <TextView android:layout_marginTop="16dp" android:layout_below="@+id/img_logo_game" style="@style/line"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/ll_reward" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/img_reward_logo" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_marginRight="@dimen/dp_10" android:src="@mipmap/mh_zql_platform_crowd"/>
                    <TextView android:textSize="@dimen/dp_16" android:textColor="#ff5501" android:gravity="center" android:id="@+id/tv_reward_status" android:background="@drawable/mh_zql_daily_status_0" android:layout_width="88dp" android:layout_height="36dp" android:layout_marginRight="@dimen/dp_16" android:text="去查看" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_reward_des" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="批量做单，适合团队长、工作室等私域流量主" android:layout_toLeftOf="@+id/tv_reward_status" android:layout_below="@+id/tv_reward_title" android:layout_alignLeft="@+id/tv_reward_title"/>
                    <com.youchen.mhlite.widget.TextBoldStyle android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_reward_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="众包悬赏" android:layout_toRightOf="@+id/img_reward_logo" android:layout_alignTop="@+id/img_reward_logo"/>
                    <TextView android:layout_marginTop="16dp" android:layout_below="@+id/tv_reward_des" style="@style/line"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/ll_union" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/img_union_logo" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_marginRight="@dimen/dp_10" android:src="@mipmap/mh_zql_platform_alliance"/>
                    <TextView android:textSize="@dimen/dp_16" android:textColor="#ff5501" android:gravity="center" android:id="@+id/tv_union_status" android:background="@drawable/mh_zql_daily_status_0" android:layout_width="88dp" android:layout_height="36dp" android:layout_marginRight="@dimen/dp_16" android:text="去查看" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_union_des" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="您的最佳变现渠道，适合自有APP，公众号，小程序等流量主" android:layout_toLeftOf="@+id/tv_union_status" android:layout_below="@+id/tv_union_title" android:layout_alignLeft="@+id/tv_union_title"/>
                    <com.youchen.mhlite.widget.TextBoldStyle android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_union_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="赚钱合伙人" android:layout_toRightOf="@+id/img_union_logo" android:layout_alignTop="@+id/img_union_logo"/>
                    <TextView android:layout_marginTop="@dimen/dp_16" android:layout_below="@+id/tv_union_des" style="@style/line"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/ll_share" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/img_share_logo" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_marginRight="@dimen/dp_10" android:src="@mipmap/mh_zql_platform_share"/>
                    <TextView android:textSize="@dimen/dp_16" android:textColor="#ff5501" android:gravity="center" android:id="@+id/tv_share_status" android:background="@drawable/mh_zql_daily_status_0" android:layout_width="88dp" android:layout_height="36dp" android:layout_marginRight="@dimen/dp_16" android:text="去完成" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_share_des" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="分享拿奖金，更有额外排名奖" android:layout_toLeftOf="@+id/tv_share_status" android:layout_below="@+id/tv_share_title" android:layout_alignLeft="@+id/tv_share_title"/>
                    <com.youchen.mhlite.widget.TextBoldStyle android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_share_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每日分享高额佣金" android:layout_toRightOf="@+id/img_share_logo" android:layout_alignTop="@+id/img_share_logo"/>
                    <TextView android:layout_marginTop="16dp" android:layout_below="@+id/img_share_logo" style="@style/line"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/ll_mt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_24">
                    <ImageView android:id="@+id/img_mt_logo" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_marginRight="@dimen/dp_10" android:src="@mipmap/mh_zql_platform_mt"/>
                    <TextView android:textSize="@dimen/dp_16" android:textColor="#ff5501" android:gravity="center" android:background="@drawable/mh_zql_daily_status_0" android:layout_width="88dp" android:layout_height="36dp" android:layout_marginRight="@dimen/dp_16" android:text="去领取" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_mt_des" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="使用优惠券下单，次日返利3%" android:layout_below="@+id/tv_mt_title" android:layout_alignLeft="@+id/tv_mt_title"/>
                    <com.youchen.mhlite.widget.TextBoldStyle android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_mt_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="美团外卖优惠券" android:layout_toRightOf="@+id/img_mt_logo" android:layout_alignTop="@+id/img_mt_logo"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

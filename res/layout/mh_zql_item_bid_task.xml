<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/mh_zql_bottom_line" android:paddingRight="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="77dp" android:layout_marginLeft="@dimen/dp_16">
    <ImageView android:id="@+id/img_type" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerVertical="true"/>
    <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="-2dp" android:text="" android:layout_toRightOf="@+id/img_type" android:layout_alignTop="@+id/img_type"/>
    <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_type" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/img_type" android:layout_alignBottom="@+id/img_type" android:layout_centerVertical="true"/>
    <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_project_name" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/tv_type" android:layout_alignBottom="@+id/img_type" android:layout_centerVertical="true"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/img_type" android:layout_alignParentRight="true">
        <TextView android:textSize="15sp" android:textColor="@color/color_FF4343" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_change_task" android:background="@drawable/mh_zql_chat_btn_send" android:visibility="gone" android:layout_width="60dp" android:layout_height="25dp" android:layout_marginLeft="@dimen/dp_10" android:text="换任务"/>
    </LinearLayout>
    <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="16dp" android:text="" android:layout_alignBottom="@+id/img_type" android:layout_alignParentRight="true"/>
</RelativeLayout>

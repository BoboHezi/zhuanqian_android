<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_user_header"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_user_header"
        android:layout_toRightOf="@+id/img_user_header"
        android:text="阿拉蕾"
        android:textColor="@color/color_FF999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_marginTop="@dimen/dp_6"
        android:text="2020/12/08  12:01"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:text="审核速度快、要求明确、任务简单好做"
        android:textColor="@color/color_FF333333"
        android:textSize="13sp" />

    <com.youchen.mhlite.widget.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_user_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="14dp"
        android:numStars="5"
        app:clickable="false"
        app:starCount="5"
        app:starEmpty="@mipmap/mh_zql_evaluate_normal"
        app:starFill="@mipmap/mh_zql_evaluate_sel"
        app:starHalf="@mipmap/mh_zql_evaluate_sel"
        app:starImageSize="10dp"
        app:starPadding="3dp"
        app:starStep="5"
        app:stepSize="1" />

    <TextView
        style="@style/line"
        android:layout_below="@+id/tv_des"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/dp_10" />
</RelativeLayout>

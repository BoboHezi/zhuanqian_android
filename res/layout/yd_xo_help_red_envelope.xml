<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FF333333">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/yd_xo_back_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/yd_xo_red_envelope_demolition"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_user_header"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="@dimen/dp_86"
            android:src="@mipmap/yd_xo_user_default" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="帮我拆100元"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/btn_open_red"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/dp_20" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_open_result"
        android:layout_width="wrap_content"
        android:layout_height="390dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/yd_xo_red_envelope_open"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_open_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="好手气，给好友助力了"
            android:textColor="#ffa44f42"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_open_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#fff8472c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_open_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff8472c"
                android:textSize="40sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_red_detail"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@+id/ll_money"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_our_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="当前好友累计已拆99.8元"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_our_money"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="也送你一个红包"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_help_our"
        android:layout_width="wrap_content"
        android:layout_height="321dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/yd_xo_help_our_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:text="温馨提示"
            android:textColor="@color/color_FF333333"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="请到活动详情页给自己助力"
            android:textColor="#ffa44f42"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_go_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@mipmap/yd_xo_help_btn"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_15"
            android:text="去活动页"
            android:textColor="#e30606"
            android:textSize="@dimen/sp_19" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_new_people"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/yd_xo_help_new_people_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_new_people_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="好手气，给好友助力了"
            android:textColor="#ffa44f42"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_new_people_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_new_people_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#fff8472c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_new_people_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff8472c"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="恭喜您获得现金助力红包，请到账户余额查看！"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/btn_go_look_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@mipmap/yd_xo_help_btn"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_15"
                android:text="去查看"
                android:textColor="#e30606"
                android:textSize="@dimen/sp_19" />

            <TextView
                android:id="@+id/tv_new_people_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="当前好友累计已拆99.8元"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

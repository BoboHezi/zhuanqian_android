<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="321dp"
    android:layout_height="wrap_content"
    android:background="@drawable/yd_xo_white_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_18"
        android:text=""
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_24">

        <TextView
            android:id="@+id/tv_tip_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_FF4343"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <com.jdqy.zqyd.widget.ClearEditText
        android:id="@+id/et_price"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@drawable/yd_xo_task_edt_count"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/color_FF333333"
        android:textColorHint="@color/color_BBBBBB"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次调整所需金额（包含服务费）："
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0元"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_money_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/sp_14"
        android:text=" "
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_FF666666"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="1px"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:background="#ffcccccc" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>

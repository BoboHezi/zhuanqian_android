<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_friend"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="16dp"
    android:background="@drawable/mh_zql_white_shape"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/dp_16">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_header"
        android:layout_toRightOf="@+id/img_header"
        android:textColor="@color/color_FF333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_header"
        android:layout_toRightOf="@+id/img_header"
        android:textColor="@color/color_FF999999"
        android:textSize="14sp" />

    <TextView
        android:layout_width="71dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/mh_zql_new_task_finish"
        android:gravity="center"
        android:text="去赚钱"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>

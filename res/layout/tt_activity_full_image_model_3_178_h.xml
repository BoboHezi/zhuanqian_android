<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/tt_full_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/tt_full_image_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.bytedance.sdk.openadsdk.component.reward.view.RatioImageView android:id="@+id/tt_ratio_image_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        <TextView android:textSize="7sp" android:textColor="#b7b7b7" android:id="@+id/tt_ad_logo" android:paddingLeft="2dp" android:layout_width="32dp" android:layout_height="12dp" android:text="@string/tt_ad_logo_txt" android:drawableLeft="@drawable/tt_ad_logo_reward_full" android:layout_alignBottom="@+id/tt_ratio_image_view" android:drawableStart="@drawable/tt_ad_logo_reward_full" android:paddingStart="2dp"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/tt_video_reward_bar" android:background="@color/tt_download_bar_background_new" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="90dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true">
        <com.bytedance.sdk.openadsdk.core.widget.TTRoundRectImageView android:id="@+id/tt_reward_ad_icon" android:background="@android:color/transparent" android:layout_width="69dp" android:layout_height="69dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/tt_reward_ad_icon" android:layout_toEndOf="@+id/tt_reward_ad_icon">
            <TextView android:textSize="17sp" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tt_reward_ad_appname" android:layout_width="wrap_content" android:layout_height="27dp" android:layout_marginLeft="14dp" android:maxWidth="153dp" android:text="绝地求生刺激战场" android:singleLine="true" android:layout_marginStart="14dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="5dp" android:layout_marginStart="14dp">
                <com.bytedance.sdk.openadsdk.core.widget.TTRatingBar android:layout_gravity="center" android:id="@+id/tt_rb_score" android:layout_width="wrap_content" android:layout_height="14dp"/>
                <TextView android:textSize="11sp" android:textColor="#4a4a4a" android:ellipsize="end" android:id="@+id/tt_comment_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxWidth="63dp" android:text="@string/tt_comment_num" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="17sp" android:textColor="@color/tt_white" android:gravity="center" android:id="@+id/tt_reward_ad_download" android:background="@drawable/tt_download_corner_bg" android:layout_width="90dp" android:layout_height="36dp" android:layout_marginRight="15dp" android:text="@string/tt_video_download_apk" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_step_number"
        style="@style/tv_step_number" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jdqy.zqyd.widget.CommonTextView
            android:id="@+id/tv_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_copy_content"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_step_title"
            android:background="@drawable/yd_xo_task_detail_input"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_FF999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btn_copy_link"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/tv_copy_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_copy_content"
            android:background="@drawable/yd_xo_link_pre"
            android:gravity="center"
            android:text="复制数据"
            android:textColor="@color/text_color_btn"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16">

        <ImageView
            android:id="@+id/img_user_header"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/mh_zql_user_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@+id/img_user_header"
            android:text=""
            android:textColor="@color/color_FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pb_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@+id/img_user_header"
            android:text=""
            android:textColor="#ffbcbfc2"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_user_header"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_user_name"
            android:src="@mipmap/mh_zql_store_realname" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/dp_16"
        android:text=""
        android:textColor="@color/color_FF333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_pay_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="9dp"
        android:text=""
        android:textColor="#ff67696b"
        android:textSize="13sp" />

    <View
        style="@style/line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16" />

    <LinearLayout
        android:id="@+id/ll_option"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tv_task_time"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:drawablePadding="6.5dp"
                android:gravity="center"
                android:text="取消收藏"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_look"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6.5dp"
                android:gravity="center"
                android:text="查看资源"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f5f7f8" />
</LinearLayout>

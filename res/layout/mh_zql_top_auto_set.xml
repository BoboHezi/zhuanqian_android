<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:background="@drawable/mh_zql_bottom_line" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="47dp">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_gravity="center_vertical" android:id="@+id/tv_title_lab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="刷新名称" android:minEms="4"/>
                <EditText android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:textColorHint="@color/color_FF999999" android:id="@+id/ed_name" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp_10" android:hint="请输入自动刷新的名称" android:maxLength="10"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_start_time" android:background="@drawable/mh_zql_bottom_line" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="47dp">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开始时间" android:minEms="4"/>
                <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:id="@+id/tv_start_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:drawableRight="@mipmap/mh_zql_arrow"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/mh_zql_bottom_line" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="47dp">
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_gravity="center_vertical" android:id="@+id/tv_time_lab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="置顶时间" android:minEms="4"/>
                <EditText android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:textColorHint="@color/color_FF999999" android:id="@+id/ed_time" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp_10" android:hint="" android:maxLength="2" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_report" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="47dp">
                <ImageView android:id="@+id/img_repeat_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_check_bg"/>
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:text="每天重复" android:minEms="4"/>
            </LinearLayout>
            <TextView android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="@dimen/dp_10"/>
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:paddingLeft="@dimen/dp_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:text="温馨提示"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_FF999999" android:paddingLeft="@dimen/dp_16" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="1、已开始置顶或推荐后，任务中途暂停，置顶或推荐时间不会暂停； " android:lineSpacingExtra="@dimen/dp_5"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_coupon_des" android:paddingLeft="@dimen/dp_16" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="2.购买5小时以上推荐，可抵扣0.5元代金券"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_FF999999" android:paddingLeft="@dimen/dp_16" android:paddingRight="10dp" android:paddingBottom="@dimen/dp_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="3、已开始置顶或推荐后，提前下架或任务提前完成，置顶或推荐时间不会保留，也不会折算费用返还，请根据需要设置时间； \104、设置定时置顶和推荐后，在每天开始时间扣费，余额不足将不会开启置顶或推荐，请确保账户余额足够；\105、设置定时置顶和推荐后，可以随时取消，取消后次日生效。当天已开始的置顶或推荐不能取消，未开始的可以取消；" android:lineSpacingExtra="@dimen/dp_5"/>
            <TextView android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dp_48">
        <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF333333" android:gravity="center" android:id="@+id/tv_pay_money" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="单次金额：¥0"/>
            <TextView android:textSize="11sp" android:textColor="#ff9a9a9a" android:id="@+id/tv_coupon_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp_16" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_sure" android:background="@drawable/mh_zql_task_dark" android:layout_width="148dp" android:layout_height="match_parent" android:text="确定"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minEms="4"
            android:text="姓名"
            android:textColor="@color/color_FF333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:maxLength="30"
            android:textColor="@color/color_FF333333"
            android:textColorHint="#999" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="#d8d8d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minEms="4"
            android:text="身份证号"
            android:textColor="@color/color_FF333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_id_cd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:textColor="@color/color_FF333333"
            android:textColorHint="#999" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/real_name_tip"
        android:textColor="#ffff4343"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btn_go"
        android:layout_width="@dimen/dp_100"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:drawableRight="@mipmap/mh_zql_arrow"
        android:gravity="right|center_vertical|center_horizontal|center"
        android:paddingRight="@dimen/dp_16"
        android:text="实名必要性"
        android:textColor="@color/color_FF333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/mh_zql_task_public"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="#ffffffff"
        android:textSize="16sp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/item_task" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="@dimen/dp_40" android:layout_marginTop="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_5">
        <ImageView android:id="@+id/img_type" android:layout_width="40dp" android:layout_height="40dp"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="-4dp" android:text="" android:layout_toRightOf="@+id/img_type"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/tv_task_title" android:layout_alignBottom="@+id/img_type">
            <TextView android:textSize="12sp" android:textColor="@color/btn_task_dark" android:gravity="center" android:id="@+id/tv_bag_tag" android:background="@drawable/mh_zql_bag_tag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:text="众包"/>
            <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_project_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp_14" android:textStyle="bold" android:textColor="@color/color_FF4343" android:id="@+id/tv_money_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_marginRight="@dimen/dp_5" android:text="元" android:layout_alignTop="@+id/tv_task_title" android:layout_alignParentRight="true"/>
        <TextView android:textSize="@dimen/sp_16" android:textStyle="bold" android:textColor="@color/color_FF4343" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toLeftOf="@+id/tv_money_unit" android:layout_alignTop="@+id/tv_task_title"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_count_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_5" android:text="" android:layout_alignBottom="@+id/img_type" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_FF4343" android:id="@+id/tv_tip" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="64dp" android:layout_marginTop="1dp" android:text=" "/>
    <LinearLayout android:id="@+id/ll_time" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="64dp" android:layout_marginTop="@dimen/dp_5" android:layout_marginRight="@dimen/dp_16">
        <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_FF999999" android:id="@+id/tv_top_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_FF999999" android:id="@+id/tv_recommend_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:background="#cecece" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_10" style="@style/line"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:id="@+id/btn_apply_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:id="@+id/tv_apply_count" android:paddingLeft="@dimen/dp_16" android:text="" android:drawableLeft="@mipmap/mh_zql_public_task_examine" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_refresh" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="刷新" android:drawableLeft="@mipmap/mh_zql_public_task_refresh" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_up_self" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="上架" android:drawableLeft="@mipmap/mh_zql_public_task_upshelf" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_set_up" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="置顶" android:drawableLeft="@mipmap/mh_zql_public_task_top" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_recommend" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:paddingRight="@dimen/dp_10" android:text="推荐" android:drawableLeft="@mipmap/mh_zql_public_task_recommend" style="@style/btn_public_style"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_public" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="发布" android:drawableLeft="@mipmap/mh_zql_public_send" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_modify" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="修改" android:drawableLeft="@mipmap/mh_zql_public_edit" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_restart_public" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="重新发布" android:drawableLeft="@mipmap/mh_zql_public_send" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_finish" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="已完成" android:drawableLeft="@mipmap/mh_zql_public_finish" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_del" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="删除" android:drawableLeft="@mipmap/mh_zql_public_del" style="@style/btn_public_style"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_down_shelf" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="下架" android:drawableLeft="@mipmap/mh_zql_public_down_shelf" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_add_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="加量" android:drawableLeft="@mipmap/mh_zql_public_add_price" style="@style/btn_public_style"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/btn_cancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
        <TextView android:text="撤销" android:drawableLeft="@mipmap/mh_zql_public_cancel" style="@style/btn_public_style"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:id="@+id/btn_add_count_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="加量" android:drawableLeft="@mipmap/mh_zql_public_add_price" style="@style/btn_public_style"/>
            <TextView android:background="@color/color_FF999999" android:layout_width="1dp" android:layout_height="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@+id/btn_add_money" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:text="加价" android:drawableLeft="@mipmap/mh_zql_public_add_price" style="@style/btn_public_style"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:background="#f3f3f3" android:layout_width="match_parent" android:layout_height="@dimen/dp_10"/>
</LinearLayout>

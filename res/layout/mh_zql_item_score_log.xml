    android:layout_height="wrap_content"
    android:background="@drawable/mh_zql_bottom_line"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_style_1"
        android:text="" />

    <TextView
        android:id="@+id/tv_score"
        style="@style/tv_style_1"

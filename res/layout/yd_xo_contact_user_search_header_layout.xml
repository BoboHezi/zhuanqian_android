<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_53"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="61dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="@dimen/dp_18"
        android:text="取消"
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_17" />

    <com.jdqy.zqyd.widget.ClearEditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_toLeftOf="@+id/tv_cancel"
        android:background="@drawable/yd_xo_index_edittext_bg"
        android:drawableLeft="@mipmap/yd_xo_search"
        android:drawablePadding="@dimen/dp_5"
        android:hint="请输入用户ID、用户名、手机号"
        android:imeOptions="actionSearch"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11"
        android:singleLine="true"
        android:textColor="@color/color_FF333333"
        android:textColorHint="@color/color_BBBBBB"
        android:textCursorDrawable="@drawable/yd_xo_common_cursor"
        android:textSize="@dimen/sp_13" />

    <View
        style="@style/line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/mh_zql_common_white_header_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/color_66FFA3A5"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="为了您的提现和充值方便，请绑定微信。"
        android:textColor="@color/color_FF4343"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/btn_wx_login"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:drawableLeft="@mipmap/mh_zql_withdrawal_wx"
        android:drawableRight="@mipmap/mh_zql_arrow"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="微信"
        android:textColor="@color/color_FF333333"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f4f4f6" />
</LinearLayout>

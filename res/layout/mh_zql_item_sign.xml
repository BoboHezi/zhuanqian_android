<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_look_task"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mh_zql_sign_style">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/mh_zql_sign_money_style"
            android:gravity="center"
            android:text="+0.2"
            android:textColor="@drawable/mh_zql_sign_money_text_style"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_sign_flag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="第1天"
            android:textColor="@color/color_FF999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_finish_sign"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mh_zql_sign_finish_status"
            android:gravity="center"
            android:text="签到成功"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_red_package"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/mh_zql_red_package"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_sign"
        android:layout_width="71dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="8dp"
        android:background="@drawable/mh_zql_sign_status"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp" />
</LinearLayout>

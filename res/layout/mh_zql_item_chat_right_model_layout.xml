<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_date" android:background="#dddddf" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/img_user_header" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="8dp" android:layout_marginRight="16dp" android:src="@mipmap/mh_zql_user_default" android:layout_below="@+id/tv_date" android:layout_alignParentRight="true"/>
    <TextView android:textSize="9sp" android:gravity="center" android:id="@+id/tv_user_flag" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_below="@+id/img_user_header" android:layout_alignLeft="@+id/img_user_header"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_pic" android:background="@drawable/mh_zql_white_shape_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_50" android:layout_toLeftOf="@+id/img_user_header" android:layout_alignTop="@+id/img_user_header">
        <com.youchen.mhlite.widget.CommonTextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:textColorLink="@color/color_4FB2FF" android:autoLink="web" android:id="@+id/tv_chat_content" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="300dp"/>
        <com.lzy.ninegrid.NineGridView android:id="@+id/img_nine_gd" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10" app:ngv_gridSpacing="5dp" app:ngv_mode="1" app:ngv_singleImageSize="90dp"/>
        <RelativeLayout android:layout_gravity="right" android:id="@+id/video_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10">
            <ImageView android:id="@+id/img_chat" android:layout_width="90dp" android:layout_height="90dp"/>
            <ImageView android:layout_width="38dp" android:layout_height="38dp" android:src="@mipmap/mh_zql_chat_video_play" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="13sp" android:textColor="@color/btn_task_dark" android:gravity="center" android:layout_gravity="right" android:id="@+id/btn_restart_msg" android:background="@drawable/mh_zql_chat_restar_send" android:visibility="gone" android:layout_width="70dp" android:layout_height="26dp" android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_10" android:text="重新发送"/>
    </LinearLayout>
    <TextView android:textSize="11sp" android:textColor="@color/color_FC5F44" android:id="@+id/tv_unread_flag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="未读消息"/>
</RelativeLayout>

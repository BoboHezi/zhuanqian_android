<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="#000000" android:layout_gravity="center_horizontal" android:id="@+id/progress_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
        <ProgressBar android:id="@+id/progress" android:layout_width="match_parent" android:layout_height="30px" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:progressDrawable="@drawable/mh_zql_common_progressdialog_progressbar_background" style="?android:attr/progressBarStyleHorizontal"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
            <TextView android:textSize="15sp" android:textColor="@color/color_ff0000" android:gravity="center_horizontal" android:id="@+id/progress_percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="4"/>
            <TextView android:textSize="30px" android:textColor="@color/color_ff0000" android:gravity="center_horizontal" android:id="@+id/progress_number" android:visibility="gone" android:layout_width="250px" android:layout_height="wrap_content" android:layout_marginLeft="120px"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@drawable/yd_xo_top_task_detail"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/ll_top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/yd_xo_back_white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:singleLine="true"
                android:text="首页竞价"
                android:textColor="@color/text_color_btn"
                android:textSize="@dimen/sp_17" />

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical|center_horizontal|center"
                android:minWidth="@dimen/dp_100"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="69dp"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/yd_xo_white_shape"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/btn_sel_task"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/yd_xo_bottom_line"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="竞价任务"
                    android:textColor="@color/color_FF333333" />

                <TextView
                    android:id="@+id/tv_task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_FF333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/yd_xo_bottom_line"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出价"
                    android:textColor="@color/color_FF333333" />

                <EditText
                    android:id="@+id/ed_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="请输入您的出价"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/color_FF333333"
                    android:textColorHint="@color/color_BBBBBB"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="元"
                    android:textColor="@color/color_FF333333" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="竞价规则"
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/dp_16"
        android:text="@string/bid_tip"
        android:textColor="@color/color_FF666666"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btn_task_dark"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_color_btn"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
</LinearLayout>

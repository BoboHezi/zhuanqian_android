<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/mh_zql_common_white_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶单价"
                android:textColor="@color/color_FF333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_top_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="10元/小时"
                android:textColor="#ff262728"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:background="#e9ebee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶时间"
                android:textColor="@color/color_FF333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_top_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/transparent"
                android:hint="请输入置顶时间"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#ff262728"
                android:textColorHint="#bcbfc2"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="置顶总价"
            android:textColor="#ff262728"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计0元"
            android:textColor="#ffbcbfc2"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#f5f7f8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/dp_8"
        android:text="1、 置顶成功后，有效时间内会在首页（随机显示）和大厅置顶位显示；\10 2、置顶成功后，未到期前，可以继续购买，置顶时间会自动累加；\10 3、置顶后，悬赏单暂停，置顶时间不会暂停；\10 4、置顶后，不支持任何形式退费，请根据使用情况购买；"
        android:textColor="#ffbcbfc2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/mh_zql_task_public"
        android:gravity="center"
        android:text="确认置顶"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_system_note"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:background="@drawable/yd_xo_bottom_line">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_header"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/img_header"
        android:text=""
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_header"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/img_header"
        android:text=""
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/yd_xo_red_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/yd_xo_arrow" />
</RelativeLayout>

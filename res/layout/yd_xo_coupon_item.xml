<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <ImageView
        android:id="@+id/img_product_logo"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/dp_8" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@+id/img_product_logo"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="滑洗澡软底居家外穿"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/img_product_logo"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/bar_sign"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="144dp"
            android:layout_height="14dp"
            android:max="100"
            android:progressDrawable="@drawable/yd_xo_coupon_bar" />

        <TextView
            android:id="@+id/tv_pay_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="sssss"
            android:textColor="@color/color_FF999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/bar_sign"
            android:layout_marginRight="@dimen/dp_10"
            android:text=""
            android:textColor="@color/color_FF4343"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_product_logo"
        android:layout_toRightOf="@+id/img_product_logo"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_coupon_value"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:background="@mipmap/yd_xo_coupon_money"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="10sp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="券后价"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/color_FF4343"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textColor="@color/color_FF4343"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="@dimen/dp_28"
        android:layout_alignBottom="@+id/img_product_logo"
        android:layout_alignParentRight="true"
        android:background="@drawable/yd_xo_copon_go"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:drawableRight="@mipmap/yd_xo_enter_red"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="马上抢"
            android:textColor="#ffff4343"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>

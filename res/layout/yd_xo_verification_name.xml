<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/yd_xo_common_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_task_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/yd_xo_verification_white_shape"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/btn_task_dark" />

            <TextView
                android:id="@+id/tv_step_line_1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1"
                android:background="@color/color_80fff" />

            <TextView
                android:id="@+id/tv_step_2"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/yd_xo_verification_white_50_shape"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/btn_task_dark" />

            <TextView
                android:id="@+id/tv_step_line_2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1"
                android:background="@color/color_80fff" />

            <TextView
                android:id="@+id/tv_step_3"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/yd_xo_verification_white_50_shape"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/btn_task_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肖像认证"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_step_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上传身份证"
                android:textColor="@drawable/yd_xo_verification_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_step_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证成功"
                android:textColor="@drawable/yd_xo_verification_text"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="每人有3次认证机会，请认真提交认证信息"
            android:textColor="#b8ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upload_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="请拍照上传您的头像"
            android:textColor="@color/color_FF333333"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:src="@mipmap/yd_xo_verficatin_user_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="头像示例"
            android:textColor="@color/color_FF999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50">

            <ImageView
                android:id="@+id/img_upload_header"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/yd_xo_upload_verficatin_user_header" />

            <ImageView
                android:id="@+id/btn_close_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/img_upload_header"
                android:src="@mipmap/yd_xo_close_6" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upload_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="请上传您的身份证"
            android:textColor="@color/color_FF333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="158dp"
                android:layout_height="106dp"
                android:src="@mipmap/yd_xo_example_idcard" />

            <RelativeLayout
                android:layout_width="158dp"
                android:layout_height="106dp"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@drawable/yd_xo_verification_id_card">

                <ImageView
                    android:id="@+id/sel_upload_id_card"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@mipmap/yd_xo_upload_verficatin_user_header" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sel_upload_id_card"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="上传身份证"
                    android:textColor="@color/btn_task_dark"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_upload_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/btn_close_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/yd_xo_close_6" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f3f3f3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="拍摄身份证要求"
            android:textColor="@color/color_FF333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="大陆公民持有的本人二代有效身份证，"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄时确保身份证"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="边框完整，字迹清晰，亮度均匀。"
                android:textColor="@color/btn_task_dark"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/yd_xo_example_idcardsmall1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:src="@mipmap/yd_xo_id_card_check_green" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/yd_xo_example_idcardsmall2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:src="@mipmap/yd_xo_id_card_failure" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/yd_xo_example_idcardsmall3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:src="@mipmap/yd_xo_id_card_failure" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/yd_xo_example_idcardsmall4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:src="@mipmap/yd_xo_id_card_failure" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upload_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="131dp"
            android:layout_height="127dp"
            android:layout_marginTop="63dp" />

        <TextView
            android:id="@+id/tv_result_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/btn_task_dark"
        android:gravity="center"
        android:text="下一步，上传身份证"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />
</LinearLayout>

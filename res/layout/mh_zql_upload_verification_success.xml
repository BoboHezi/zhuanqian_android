<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_15" android:src="@mipmap/mh_zql_success"/>
            <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="24dp" android:text="恭喜您，任务提交成功！"/>
            <ImageView android:background="@color/color_f4f4f6" android:layout_width="match_parent" android:layout_height="10dp"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
                <TextView android:background="#3a3a3a" android:layout_width="40dp" android:layout_height="1dp"/>
                <TextView android:background="#3a3a3a" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="5dp" android:rotation="45"/>
                <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:text="推荐赚钱"/>
                <TextView android:background="#3a3a3a" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginRight="5dp" android:rotation="45"/>
                <TextView android:background="#3a3a3a" android:layout_width="40dp" android:layout_height="1dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recy_task_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

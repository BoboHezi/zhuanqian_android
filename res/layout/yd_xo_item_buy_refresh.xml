<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/yd_xo_task_filter_bg"
        android:gravity="center_horizontal"
        android:minWidth="156dp"
        android:minHeight="48dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_refresh_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5次/10元"
            android:textColor="@drawable/yd_xo_task_filter_text_bg"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_coupon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/yd_xo_coupon_buy_refresh"
            android:gravity="center"
            android:text="代金券抵扣10元"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>

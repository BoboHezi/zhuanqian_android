<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_user_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_user_header"
                android:text=""
                android:textColor="@color/color_FF333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_task_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_alignLeft="@+id/tv_user_name"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textColor="@color/color_FF999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_report_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_task_no"
                android:layout_alignLeft="@+id/tv_user_name"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textColor="@color/color_FF999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_FF999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/yd_xo_task_public"
                android:gravity="center"
                android:text="撤销"
                android:textColor="@color/text_color_btn"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            style="@style/line"
            android:layout_marginTop="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报类型："
                android:textColor="@color/color_FF999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_FF333333"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报原因："
                android:textColor="@color/color_FF999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_report_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_FF333333"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_16"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理结果："
                android:textColor="@color/color_FF999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_report_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_FF333333"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

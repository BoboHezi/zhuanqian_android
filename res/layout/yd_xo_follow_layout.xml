<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/yd_xo_common_white_header_layout" />

    <com.jdqy.zqyd.widget.tablayout.CommonTabLayout
        android:id="@+id/tab_follow"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_48"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/color_FF4343"
        tl:tl_indicator_corner_radius="1dp"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_margin_top="100dp"
        tl:tl_indicator_width="21dp"
        tl:tl_textSelectColor="@color/color_FF4343"
        tl:tl_textUnselectColor="@color/color_FF333333"
        tl:tl_textsize="@dimen/sp_16" />

    <View style="@style/line" />

    <LinearLayout
        android:id="@+id/me_follow_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>

        <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_FF999999" android:ellipsize="end" android:id="@+id/tv_reminding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="@dimen/dp_16" android:maxLines="1" android:layout_below="@+id/ll_title" android:layout_alignLeft="@+id/ll_title"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/sp_14" android:textStyle="bold" android:textColor="@color/color_FF4343" android:id="@+id/tv_money_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:text="å…ƒ" android:layout_alignTop="@+id/ll_title" android:layout_alignParentRight="true"/>

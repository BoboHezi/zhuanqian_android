<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f6"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/dp_20"
        android:text="邀请好友"
        android:textColor="#ff333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="35dp"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="35dp"
        android:text="邀请好友奖现金红包和收入分成，好友越多赚得越多"
        android:textColor="#ff666666"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="27dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_30">

        <TextView
            android:id="@+id/wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/mh_zql_wechat"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/color_FF666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/friend_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/mh_zql_friendcircle"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/color_FF666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_qq_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/mh_zql_qqfriend"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:text="QQ好友"
            android:textColor="@color/color_FF666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_qq_qzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/mh_zql_qqzone"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="@color/color_FF666666"
            android:textSize="15sp" />
    </LinearLayout>

    <View style="@style/line" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_17" />
</LinearLayout>

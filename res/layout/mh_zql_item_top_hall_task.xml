<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_user_header"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/mh_zql_user_default" />

            <ImageView
                android:id="@+id/iv_member"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignRight="@+id/img_user_header"
                android:layout_alignBottom="@+id/img_user_header"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/bail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mh_zql_bail_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mh_zql_top"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mh_zql_recommend"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header_layout"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="关注微信公众号"
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="544544545"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_reminding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_key"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="555555555"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reminding"
        android:layout_alignLeft="@+id/tv_key"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:text="55555555"
        android:textColor="@color/color_FF4343"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/right_line"
        style="@style/line"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_header_layout"
        android:layout_alignBottom="@+id/tv_money"
        android:layout_alignParentRight="true" />
</RelativeLayout>

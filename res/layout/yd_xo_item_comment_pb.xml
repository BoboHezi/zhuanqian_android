<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_user_header"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/img_user_header"
        android:text="你的牛奶咖啡"
        android:textColor="#ff262728"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/img_user_header"
        android:text="ID：908712"
        android:textColor="#ffbcbfc2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_id"
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toRightOf="@+id/img_user_header"
        android:text="这个任务做过一次，比较靠谱，比较容易推广， 资金到账也比较快，值得推荐！"
        android:textColor="@color/color_FF333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_pb_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/img_user_header"
        android:text="发表于：2020/04/09 10:48"
        android:textColor="#ffbcbfc2"
        android:textSize="13sp" />

    <TextView
        style="@style/line"
        android:layout_below="@+id/tv_pb_time"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@+id/img_user_header" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_union_content"
        android:layout_width="240dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_qr"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="208dp"
            android:src="@mipmap/yd_xo_user_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_user_header"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_user_header"
            android:text=""
            android:textColor="#ff323435"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_invite_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_alignBottom="@+id/iv_user_header"
            android:textColor="#ff8c898a"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text=""
            android:textColor="#ff4622"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_invite_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invite_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="我的邀请码"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_qr_code"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_below="@+id/tv_invite_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignTop="@+id/img_qr_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/icon_logo" />

        <TextView
            android:id="@+id/tv_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_qr_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_24"
            android:text="长按识别二维码赚钱"
            android:textColor="#ff3b3839"
            android:textSize="7sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/btn_save_qcode"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:background="@drawable/yd_xo_union_btn"
            android:gravity="center"
            android:text="保存图片"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/yd_xo_union_btn"
            android:gravity="center"
            android:text="立即分享"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/yd_xo_union_dg_close" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/yd_xo_me_avatar_bg" />

                    <RelativeLayout
                        android:id="@+id/ll_member_layout"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/yd_xo_member"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/yd_xo_user_v" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/yd_xo_user_money" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_member_open"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/yd_xo_member_open"
                            android:gravity="center"
                            android:text="开通会员"
                            android:textColor="@color/color_FF666666"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="81dp">

                        <ImageView
                            android:id="@+id/img_me_user_icon"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:src="@mipmap/yd_xo_user_default" />

                        <TextView
                            android:id="@+id/tv_me_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_toRightOf="@+id/img_me_user_icon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <ImageView
                            android:id="@+id/iv_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_toRightOf="@+id/tv_me_username" />

                        <TextView
                            android:id="@+id/tv_user_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_me_username"
                            android:layout_alignBottom="@+id/img_me_user_icon"
                            android:layout_toRightOf="@+id/img_me_user_icon"
                            android:gravity="center_vertical"
                            android:minWidth="@dimen/dp_100"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_my_store"
                            android:layout_width="@dimen/dp_86"
                            android:layout_height="@dimen/dp_28"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/yd_xo_me_store_bg"
                            android:drawableLeft="@mipmap/yd_xo_me_shop_icon"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_4"
                            android:text="我的店铺"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginTop="176dp"
                    android:background="@mipmap/yd_xo_bg2">

                    <LinearLayout
                        android:id="@+id/btn_me_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/yd_xo_me_recharge_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_me_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/yd_xo_me_deposit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保证金"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_me_bill"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/yd_xo_me_bill_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收支账单"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_me_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/yd_xo_me_coupon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="代金券"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/btn_bonus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="赏金"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_me_bonusAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="67dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@drawable/yd_xo_me_change_money"
                            android:gravity="center"
                            android:text="去提现"
                            android:textColor="@color/btn_task_dark"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_24"
                        android:background="@color/color_eeeeee" />

                    <LinearLayout
                        android:id="@+id/btn_task_reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="奖励"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_me_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="67dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@drawable/yd_xo_me_change_money"
                            android:gravity="center"
                            android:text="去提现"
                            android:textColor="@color/btn_task_dark"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_24"
                        android:background="@color/color_eeeeee" />

                    <LinearLayout
                        android:id="@+id/btn_task_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="余额"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_me_taskAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="67dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@drawable/yd_xo_me_change_money"
                            android:gravity="center"
                            android:text="去提现"
                            android:textColor="@color/btn_task_dark"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_24"
                        android:background="@color/color_eeeeee" />

                    <LinearLayout
                        android:id="@+id/btn_bond_Amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="保证金"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_me_bondAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="67dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@drawable/yd_xo_me_change_money"
                            android:gravity="center"
                            android:text="去提现"
                            android:textColor="@color/btn_task_dark"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dp_16" />

                <LinearLayout
                    android:id="@+id/btn_paying_money"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在途赏金"
                        android:textColor="@color/color_FF333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_paying_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_16"
                        android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="right"
                        android:text="0元"
                        android:textColor="@color/color_FF333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/btn_public_manager"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/yd_xo_public_manager"
                        android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                        android:drawablePadding="11dp"
                        android:gravity="center_vertical"
                        android:text="发布任务"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/btn_task"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/yd_xo_task"
                        android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                        android:drawablePadding="11dp"
                        android:gravity="center_vertical"
                        android:text="我的接单"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_16"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_integral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_integral_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/yd_xo_me_reputation"
                    android:drawablePadding="11dp"
                    android:gravity="center_vertical"
                    android:text="信誉"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_integral_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                android:id="@+id/btn_refresh_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/yd_xo_me_refresh"
                    android:drawablePadding="11dp"
                    android:gravity="center_vertical"
                    android:text="刷新次数"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_refresh_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View style="@style/line" />

            <TextView
                android:id="@+id/btn_bid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:drawableLeft="@mipmap/yd_xo_me_bid"
                android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                android:drawablePadding="11dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="首页竞价"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />

            <View style="@style/line" />

            <TextView
                android:id="@+id/btn_headline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:drawableLeft="@mipmap/yd_xo_me_headline"
                android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                android:drawablePadding="11dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="头条预约"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/btn_help_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/yd_xo_bottom_line"
                    android:drawableLeft="@mipmap/yd_xo_me_help_money"
                    android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                    android:drawablePadding="11dp"
                    android:gravity="center_vertical"
                    android:text="天天领现金"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/btn_union"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/yd_xo_bottom_line"
                    android:drawableLeft="@mipmap/yd_xo_me_union"
                    android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                    android:drawablePadding="11dp"
                    android:gravity="center_vertical"
                    android:text="我的联盟"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <RelativeLayout
                    android:id="@+id/ll_verification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_verification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/yd_xo_me_real_name"
                        android:drawablePadding="11dp"
                        android:gravity="center_vertical"
                        android:text="实名认证"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_identity_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="" />

                    <ImageView
                        android:id="@+id/img_identity_arrow"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/yd_xo_me_arrow_icon" />
                </RelativeLayout>

                <View style="@style/line" />

                <TextView
                    android:id="@+id/btn_me_friend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:drawableLeft="@mipmap/yd_xo_me_friend"
                    android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                    android:drawablePadding="11dp"
                    android:gravity="center_vertical"
                    android:text="我的好友"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <View style="@style/line" />

                <RelativeLayout
                    android:id="@+id/btn_invite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <ImageView
                        android:id="@+id/img_invite_log"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_19"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/yd_xo_me_invite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_toRightOf="@+id/img_invite_log"
                        android:text="我的邀请人"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_invite_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/img_invite_user_header"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_invite_user_name" />

                    <ImageView
                        android:id="@+id/img_invite_arrow"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/yd_xo_me_arrow_icon" />
                </RelativeLayout>

                <View style="@style/line" />

                <RelativeLayout
                    android:id="@+id/btn_fan_attention"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical">

                    <ImageView

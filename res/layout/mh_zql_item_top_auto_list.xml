<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="55dp">
    <com.youchen.mhlite.widget.EasySwipeMenuLayout android:layout_width="match_parent" android:layout_height="match_parent" app:contentView="@+id/content" app:rightMenuView="@+id/right">
        <RelativeLayout android:id="@+id/content" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <TextView android:textColor="@color/color_FF333333" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="邀请好友任务自动刷新"/>
                <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_FF999999" android:id="@+id/tv_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="邀请好友任务自动刷新" android:layout_below="@+id/tv_title"/>
            </LinearLayout>
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_start" android:background="@color/btn_task_dark" android:layout_width="65dp" android:layout_height="30dp" android:text="开始" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/right" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_deleted" android:background="@color/btn_task_dark" android:clickable="true" android:layout_width="63dp" android:layout_height="match_parent" android:text="删除"/>
        </LinearLayout>
    </com.youchen.mhlite.widget.EasySwipeMenuLayout>
    <TextView android:layout_alignParentBottom="true" style="@style/line"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/yd_xo_login_header_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/yd_xo_login_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/yd_xo_login_money" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_wx_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="27dp"
        android:background="@mipmap/yd_xo_login_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/yd_xo_login_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="微信一键登录"
            android:textColor="@color/white"
            android:textSize="16sp" />
        s
    </LinearLayout>

    <TextView
        android:id="@+id/btn_phone_login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:gravity="center_vertical"
        android:minWidth="120dp"
        android:text="手机号登录"
        android:textColor="@color/color_FF999999"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/yd_xo_check_bg" />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已同意"
                android:textColor="@color/color_FF999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/color_FF4343"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="及"
                android:textColor="@color/color_FF999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="@color/color_FF4343"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/company_name_2"
            android:textColor="@color/color_FF999999"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>

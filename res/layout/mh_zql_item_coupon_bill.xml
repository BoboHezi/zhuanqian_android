<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:text="充值100元，送代金券"/>
    <TextView android:textSize="15sp" android:textColor="@color/color_FF4343" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:text="+1元" android:layout_alignTop="@+id/tv_title" android:layout_alignParentRight="true"/>
    <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="04月11日 22:29" android:layout_below="@+id/tv_title" android:layout_alignLeft="@+id/tv_title"/>
    <TextView android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_12" android:layout_below="@+id/tv_date" style="@style/line"/>
</RelativeLayout>

        <TextView android:textSize="@dimen/sp_15" android:textColor="#ff4343" android:id="@+id/tv_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="" android:layout_below="@+id/tv_message_title" android:layout_alignLeft="@+id/tv_message_title"/>
    </RelativeLayout>
</LinearLayout>

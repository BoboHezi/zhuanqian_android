<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="90dp">
    <ImageView android:id="@+id/iv_icon" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="16dp" android:src="@mipmap/mh_zql_user_default"/>
    <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="14dp" android:singleLine="true" android:layout_toRightOf="@+id/iv_icon"/>
    <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF4343" android:id="@+id/tv_task_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="14dp" android:layout_marginRight="16dp" android:singleLine="true" android:layout_alignParentRight="true"/>
    <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF666666" android:id="@+id/tv_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_task_title" android:layout_alignLeft="@+id/tv_task_title"/>
    <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:gravity="center" android:id="@+id/tv_apply_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_3" android:text="ddddd" android:layout_below="@+id/tv_type" android:layout_alignLeft="@+id/tv_type"/>
    <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:gravity="center" android:id="@+id/tv_task_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_3" android:text="fffffff" android:layout_below="@+id/tv_apply_time" android:layout_alignLeft="@+id/tv_type"/>
    <LinearLayout android:paddingRight="@dimen/dp_16" android:layout_width="wrap_content" android:layout_height="21dp" android:layout_alignBottom="@+id/tv_apply_time" android:layout_alignParentRight="true">
        <TextView android:textSize="@dimen/sp_12" android:layout_gravity="center" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_commit" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="提交"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/tv_give_up" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:text="放弃"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_reason" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="查看原因"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_draw_package" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="领取红包"/>
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/btn_evaluate" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="评价"/>
    </LinearLayout>
    <View android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="14dp" android:layout_below="@+id/tv_task_time" style="@style/line"/>
</RelativeLayout>

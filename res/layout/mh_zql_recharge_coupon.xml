<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recharger"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mh_zql_recharge_style"
        android:gravity="center_horizontal"
        android:minHeight="66dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充¥"
                android:textColor="@color/color_FF333333"
                android:textSize="12sp" />

            <com.youchen.mhlite.widget.TextBoldStyle
                android:id="@+id/tv_recharge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/color_FF333333"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_coupon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15"
            android:text="送80元"
            android:textColor="@color/color_FF4343"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

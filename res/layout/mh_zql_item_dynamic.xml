<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f4f4f6" />

        <ImageView
            android:id="@+id/img_user_header"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/tv_space"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_user_header"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_user_header"
            android:text="趣步悬赏主"
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_alignBottom="@+id/img_user_header"
            android:text="ID:323345  "
            android:textColor="@color/color_FF999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_user_id"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_user_id"
            android:text=""
            android:textColor="@color/color_FF999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_24"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/mh_zql_chat_btn_send"
            android:drawableLeft="@mipmap/mh_zql_dynamic_white"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:text="关注"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_task_des"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/mh_zql_dynamic_item"
        android:padding="@dimen/dp_12">

        <LinearLayout
            android:id="@+id/ll_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_dy_flag"
                android:layout_width="34dp"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/mh_zql_dy_new"
                android:gravity="center"
                android:text="上新"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注微信公众号"
                android:textColor="@color/color_FF333333"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mh_zql_dynamic_arrow" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_task_title"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/mh_zql_task_detail_type_label_gray"
            android:gravity="center"
            android:text="dfdfdf"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_type"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_type"
            android:background="@drawable/mh_zql_task_detail_type_label_gray"
            android:text="dfdfdfdfdf"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toLeftOf="@+id/img_arrow"
            android:text="+3.33元"
            android:textColor="#ffff4343"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_money"
            android:layout_alignBottom="@+id/tv_type"
            android:text="100人已赚    "
            android:textColor="#ff9d9c9c"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/ll_user_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_12">
        <TextView android:id="@+id/tv_space" android:background="#f4f4f6" android:layout_width="match_parent" android:layout_height="@dimen/dp_10"/>
        <ImageView android:id="@+id/img_user_header" android:layout_width="@dimen/dp_44" android:layout_height="@dimen/dp_44" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_below="@+id/tv_space"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="趣步悬赏主" android:layout_toRightOf="@+id/img_user_header" android:layout_alignTop="@+id/img_user_header"/>
        <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_user_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID:323345  " android:layout_alignLeft="@+id/tv_user_name" android:layout_alignBottom="@+id/img_user_header"/>
        <TextView android:textSize="13sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_user_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:text="" android:layout_toRightOf="@+id/tv_user_id" android:layout_alignTop="@+id/tv_user_id"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_follow" android:background="@drawable/mh_zql_chat_btn_send" android:paddingLeft="7dp" android:layout_width="70dp" android:layout_height="@dimen/dp_24" android:layout_marginTop="@dimen/dp_8" android:layout_marginRight="@dimen/dp_16" android:text="关注" android:drawableLeft="@mipmap/mh_zql_dynamic_white" android:layout_alignTop="@+id/tv_user_name" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/ll_task_des" android:background="@drawable/mh_zql_dynamic_item" android:padding="@dimen/dp_12" android:layout_width="match_parent" android:layout_height="70dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_12">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/sp_12" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_dy_flag" android:background="@drawable/mh_zql_dy_new" android:visibility="gone" android:layout_width="34dp" android:layout_height="@dimen/dp_16" android:layout_marginRight="@dimen/dp_5" android:text="上新"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关注微信公众号"/>
        </LinearLayout>
        <ImageView android:id="@+id/img_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/mh_zql_dynamic_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:gravity="center" android:id="@+id/tv_type" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="dfdfdf" android:layout_below="@+id/ll_task_title"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_project_name" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="dfdfdfdfdf" android:layout_toRightOf="@+id/tv_type" android:layout_alignTop="@+id/tv_type" android:layout_alignParentBottom="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#ffff4343" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:text="+3.33元" android:layout_toLeftOf="@+id/img_arrow"/>
        <TextView android:textSize="12sp" android:textColor="#ff9d9c9c" android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100人已赚    " android:layout_alignRight="@+id/tv_money" android:layout_alignBottom="@+id/tv_type"/>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/color_f4f4f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:background="@color/color_f4f4f6" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/task_info_layout" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingTop="10dp" android:paddingRight="@dimen/dp_10" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/img_type" android:layout_width="40dp" android:layout_height="40dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="-4dp" android:text="" android:layout_toRightOf="@+id/img_type"/>
                <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_type_name" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignLeft="@+id/tv_task_title" android:layout_alignBottom="@+id/img_type"/>
                <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_project_name" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_5" android:text="" android:layout_toRightOf="@+id/tv_type_name" android:layout_alignBottom="@+id/img_type"/>
                <ImageView android:id="@+id/img_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/mh_zql_arrow_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="@dimen/sp_14" android:textStyle="bold" android:textColor="@color/color_FF4343" android:id="@+id/tv_money_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_2" android:layout_marginRight="@dimen/dp_5" android:text="元" android:layout_toLeftOf="@+id/img_arrow" android:layout_alignTop="@+id/tv_task_title"/>
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF4343" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toLeftOf="@+id/tv_money_unit" android:layout_alignTop="@+id/tv_task_title"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/item_task" android:background="@color/white" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_marginBottom="1dp">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_user_icon" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40" android:layout_marginLeft="@dimen/dp_16"/>
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_ff303030" android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="" android:layout_toRightOf="@+id/iv_user_icon"/>
                <TextView android:textSize="@dimen/sp_13" android:textColor="#ff9d9c9c" android:id="@+id/tv_submit_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignLeft="@+id/tv_user_name" android:layout_alignBottom="@+id/iv_user_icon"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@mipmap/mh_zql_arrow_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout android:background="@color/white" android:paddingLeft="16dp" android:paddingTop="14dp" android:paddingRight="16dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="17dp" android:layout_height="17dp" android:layout_marginTop="3dp" android:src="@mipmap/mh_zql_reply"/>
                <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tv_fail_reason" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text=""/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcly_reject_pic" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dp_48" android:layout_marginTop="1dp">
                <View android:layout_gravity="center_vertical" android:background="#3a3a3a" android:layout_width="@dimen/dp_16" android:layout_height="2dp"/>
                <TextView android:textSize="17sp" android:textColor="#ff333333" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginRight="@dimen/dp_8" android:text="验证图"/>
                <View android:layout_gravity="center_vertical" android:background="#3a3a3a" android:layout_width="@dimen/dp_16" android:layout_height="2dp"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcly_verification_pic" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            </RelativeLayout>
            <LinearLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                <com.youchen.mhlite.widget.CommonTextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF333333" android:id="@+id/tv_verify_text" android:background="@drawable/mh_zql_order_task_detail_reason_bg" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_16" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/dp_16"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_FF4343" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_50" android:text="如对驳回有异议，请发起申诉，平台客服会介入处理。禁止乱申诉，否则按违规处理。"/>
        </LinearLayout>
    </ScrollView>
    <include android:id="@+id/ll_bottom" layout="@layout/mh_zql_order_task_detail_bottom"/>
    <TextView android:textSize="@dimen/sp_16" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/btn_pass" android:background="@drawable/mh_zql_task_public" android:visibility="gone" android:layout_width="300dp" android:layout_height="@dimen/dp_40" android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10" android:text="通过审核"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/img_header" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_marginRight="16dp" android:src="@mipmap/default_icon" android:layout_centerVertical="true"/>
        <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_number" android:background="@drawable/mh_zql_red_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="14dp" android:minHeight="14dp" android:layout_alignTop="@+id/img_header" android:layout_alignRight="@+id/img_header"/>
        <com.youchen.mhlite.widget.CommonTextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="" android:singleLine="true" android:layout_toLeftOf="@+id/tv_time" android:layout_toRightOf="@+id/img_header" android:layout_alignTop="@+id/img_header"/>
        <TextView android:textSize="14sp" android:textColor="@color/color_9D9C9C" android:ellipsize="end" android:id="@+id/tv_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="80dp" android:text=" " android:singleLine="true" android:layout_toRightOf="@+id/img_header" android:layout_alignBottom="@+id/img_header"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_9D9C9C" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignTop="@+id/img_header" android:layout_alignParentRight="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/color_9D9C9C" android:ellipsize="end" android:id="@+id/tv_user_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="" android:singleLine="true" android:layout_toRightOf="@+id/img_header" android:layout_below="@+id/tv_description"/>
    </RelativeLayout>
    <View android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/dp_10" style="@style/line"/>
</LinearLayout>

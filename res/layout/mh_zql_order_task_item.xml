<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="68dp">
    <ImageView android:id="@+id/iv_icon" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40" android:layout_marginLeft="@dimen/dp_16" android:layout_centerVertical="true"/>
    <RelativeLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_13" android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_13" android:layout_marginBottom="@dimen/dp_10" android:layout_toLeftOf="@+id/ll_status" android:layout_toRightOf="@+id/iv_icon" android:layout_centerVertical="true">
        <TextView android:textSize="@dimen/sp_13" android:textColor="@color/text_color_1" android:id="@+id/tv_type" android:background="@drawable/mh_zql_task_detail_type_label" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/sp_15" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:singleLine="true" android:layout_toRightOf="@+id/tv_type" android:layout_alignTop="@+id/tv_type"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF999999" android:id="@+id/tv_task_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:layout_below="@+id/tv_type"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_FF999999" android:id="@+id/tv_task_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:layout_below="@+id/tv_task_info"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_16" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <TextView android:textSize="@dimen/sp_11" android:textColor="@color/color_FF999999" android:layout_gravity="right" android:id="@+id/tv_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_10" android:text="0:38"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/tv_status" android:background="@drawable/mh_zql_order_task_btn_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="查看原因"/>
            <TextView android:textSize="@dimen/sp_11" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/tv_give_up" android:background="@drawable/mh_zql_order_task_btn_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:text="放弃"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_marginLeft="@dimen/dp_16" android:layout_alignParentBottom="true" style="@style/line"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_order_task"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/mh_zql_weekly_star_first"
        android:gravity="center"
        android:text="接单任务"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_task_income"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@drawable/mh_zql_weekly_star"
        android:gravity="center"
        android:text="接单赚钱"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_task_release"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@drawable/mh_zql_weekly_star"
        android:gravity="center"
        android:text="发布任务"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_task_game"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@drawable/mh_zql_weekly_star_last"
        android:gravity="center"
        android:text="游戏赚钱"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_container"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/color_f4f4f6"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/footer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@mipmap/mh_zql_mountain_bg"
        android:gravity="bottom"
        android:text="加载中。。。"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_12" />

    <ProgressBar
        android:id="@+id/footer_pb_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_toStartOf="@+id/footer_text_view"
        android:layout_toLeftOf="@+id/footer_text_view"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/mh_zql_loadding_more_anim" />
</RelativeLayout>

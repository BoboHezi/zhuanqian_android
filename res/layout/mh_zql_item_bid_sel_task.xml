<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:layout_marginLeft="@dimen/dp_16"
    android:background="@drawable/mh_zql_bottom_line"
    android:paddingRight="@dimen/dp_16">

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_type"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/img_type"
        android:text="rebdfdf"
        android:textColor="@color/color_FF333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_type"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_type"
        android:background="@drawable/mh_zql_task_detail_type_label_gray"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_type"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_type"
        android:background="@drawable/mh_zql_task_detail_type_label_gray"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_type"
        android:layout_alignParentRight="true"
        android:text="12å…ƒ"
        android:textColor="@color/color_FF4343"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_type"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/img_type"
        android:text=""
        android:textColor="@color/color_FF999999"
        android:textSize="13sp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_step_number"
        style="@style/tv_step_number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <com.youchen.mhlite.widget.CommonTextView
            android:id="@+id/tv_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_open_link"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/mh_zql_link_pre"
                android:gravity="center"
                android:text="打开链接"
                android:textColor="@color/text_color_btn"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_copy_link"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_40"
                android:background="@drawable/mh_zql_link_nor"
                android:gravity="center"
                android:text="复制链接"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <TextView android:textSize="15sp" android:textColor="@color/color_FF666666" android:paddingLeft="16dp" android:paddingTop="14dp" android:paddingRight="@dimen/dp_16" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="购买须知：刷新包使用期限不限，不支持退订，请确认后购买"/>
    <TextView android:textSize="15sp" android:textColor="@color/btn_task_dark" android:id="@+id/tv_refresh_count" android:background="@color/white" android:paddingLeft="16dp" android:paddingTop="14dp" android:paddingRight="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="剩余刷新次数："/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recy_buy" android:background="@color/white" android:paddingLeft="@dimen/dp_4" android:paddingRight="@dimen/dp_4" android:paddingBottom="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <LinearLayout android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="47dp">
        <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:gravity="center" android:id="@+id/btn_cancel" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/common_dialog_cancel" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_color_btn" android:gravity="center" android:id="@+id/btn_sure" android:background="@color/btn_task_dark" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/common_dialog_confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

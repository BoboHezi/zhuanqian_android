<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_feel"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_title"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/mh_zql_white_shape"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_fee_title"
            android:layout_width="186dp"
            android:layout_height="@dimen/dp_32"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/mh_zql_union_tiitle"
            android:gravity="center"
            android:text="我的联盟链接"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <EditText
            android:id="@+id/ed_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fee_title"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/mh_zql_union_ed"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/dp_12"
            android:text=""
            android:textColor="#b7b0b3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/btn_copy"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_below="@+id/ed_fee"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/mh_zql_union_btn"
            android:gravity="center"
            android:text="复制链接"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_below="@+id/ed_fee"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/mh_zql_union_btn"
            android:gravity="center"
            android:text="立即分享"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/mh_zql_union_dg_close" />
</LinearLayout>

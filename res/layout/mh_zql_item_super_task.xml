<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/item_task" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_5">
        <ImageView android:id="@+id/img_sel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/img_type" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="@dimen/dp_8" android:layout_toRightOf="@+id/img_sel"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:layout_marginTop="-4dp" android:text="" android:layout_toRightOf="@+id/img_type"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_task_title" android:layout_alignLeft="@+id/tv_task_title">
            <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_type" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_FF999999" android:id="@+id/tv_project_name" android:background="@drawable/mh_zql_task_detail_type_label_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_toRightOf="@+id/tv_type" android:layout_below="@+id/tv_reminding" android:layout_centerVertical="true"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF4343" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignTop="@+id/tv_task_title" android:layout_alignParentRight="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_title_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:text="" android:layout_toRightOf="@+id/img_sel" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:background="@color/color_ffdbdbdb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_10"/>
</LinearLayout>

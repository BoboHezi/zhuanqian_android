<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/mh_zql_radio_task_btn" />

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/img_sel" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="-4dp"
            android:layout_toRightOf="@+id/img_type"
            android:text=""
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_title"
            android:layout_alignLeft="@+id/tv_task_title"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/mh_zql_task_detail_type_label_gray"
                android:text=""
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_reminding"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_type"
                android:background="@drawable/mh_zql_task_detail_type_label_gray"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_task_title"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/color_FF4343"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_title_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/img_sel"
            android:text=""
            android:textColor="@color/color_FF333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_ffdbdbdb" />
</LinearLayout>

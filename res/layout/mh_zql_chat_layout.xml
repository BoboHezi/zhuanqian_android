                <TextView android:textSize="12sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_title_two" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="做单通过率：24%"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_FF4343" android:id="@+id/tv_title_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ll_right" android:paddingRight="@dimen/dp_16" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="@dimen/dp_100" android:layout_alignParentRight="true">

        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_deal" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="受理"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_reject" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="驳回"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_hang_up" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="挂起"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_history" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="历史"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_pass" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="提交"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_appeal_pass" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="通过"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_user_sub" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="记录" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_task" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="任务" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_bag" android:background="@drawable/mh_zql_bag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="生成\10众包单" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_to_money" android:background="@drawable/mh_zql_bag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="划拨\10佣金" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_bag_detail" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="任务" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tv_check_detail" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="详情" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_reason" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="原因" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_up" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="上一" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="15sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/btn_next" android:background="@drawable/mh_zql_pass_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="下一" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </LinearLayout>
    <include android:id="@+id/chat_bottom" layout="@layout/mh_zql_chat_bottom"/>

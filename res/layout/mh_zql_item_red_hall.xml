<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:paddingTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/img_user_header" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="@color/color_FF999999" android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:background="@drawable/mh_zql_red_hall" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginTop="6dp">
            <ImageView android:id="@+id/img_red" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginLeft="5dp" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:src="@mipmap/mh_zql_hall_red"/>
            <TextView android:textSize="15sp" android:textColor="@color/white" android:id="@+id/tv_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/img_red" android:layout_alignTop="@+id/img_red"/>
            <TextView android:textSize="17sp" android:textColor="@color/white" android:id="@+id/tv_red_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/img_red" android:layout_alignBottom="@+id/img_red"/>
            <TextView android:textSize="15sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="元" android:layout_toRightOf="@+id/tv_red_money" android:layout_alignBottom="@+id/tv_red_money"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:background="@drawable/mh_zql_item_hall_white" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="240dp" android:layout_height="27dp">
            <TextView android:textSize="12sp" android:textColor="@color/color_FF999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/red_package_title" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_FF4343" android:gravity="center" android:background="@color/color_66FFA3A5" android:layout_width="45dp" android:layout_height="19dp" android:text="人气奖"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_FF4343" android:gravity="center_vertical" android:id="@+id/tv_max_price" android:layout_width="wrap_content" android:layout_height="19dp" android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

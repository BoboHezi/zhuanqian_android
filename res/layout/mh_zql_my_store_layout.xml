<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/color_f4f4f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@mipmap/mh_zql_my_store_top" android:paddingBottom="@dimen/dp_20" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:id="@+id/my_store_header" layout="@layout/mh_zql_my_store_header_layout"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_20" android:layout_below="@+id/my_store_header">
            <ImageView android:id="@+id/iv_user_icon" android:layout_width="58dp" android:layout_height="58dp" android:layout_marginLeft="@dimen/dp_16"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_follow_count" android:background="@drawable/mh_zql_store_follow" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_12" android:layout_width="wrap_content" android:layout_height="42dp" android:layout_marginTop="@dimen/dp_8" android:text="" android:layout_alignParentRight="true"/>
            <ImageView android:id="@+id/iv_member" android:visibility="gone" android:layout_width="@dimen/dp_15" android:layout_height="@dimen/dp_15" android:layout_marginLeft="@dimen/dp_16" android:layout_alignRight="@+id/iv_user_icon" android:layout_alignBottom="@+id/iv_user_icon"/>
            <TextView android:textSize="@dimen/sp_13" android:textColor="@color/text_color_btn" android:gravity="center" android:id="@+id/tv_identity_status" android:background="@color/bg_me_store" android:visibility="gone" android:layout_width="@dimen/dp_58" android:layout_height="@dimen/dp_24" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_3" android:text="已实名" android:layout_below="@+id/iv_user_icon"/>
            <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_toRightOf="@+id/iv_user_icon">
                <com.youchen.mhlite.widget.CommonTextView android:textSize="@dimen/sp_17" android:textColor="@color/text_color_btn" android:id="@+id/tv_me_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
                <TextView android:textSize="9sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_update" android:background="@mipmap/mh_zql_bag_small_circle" android:visibility="gone" android:layout_width="@dimen/dp_16" android:layout_height="@dimen/dp_16" android:text="小"/>
                <TextView android:textSize="13sp" android:textColor="@color/white" android:id="@+id/tv_bag_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            </LinearLayout>
            <com.youchen.mhlite.widget.CommonTextView android:textSize="@dimen/sp_15" android:textColor="@color/text_color_btn" android:id="@+id/tv_user_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:text="" android:layout_toRightOf="@+id/iv_user_icon" android:layout_below="@+id/ll_username" android:layout_alignLeft="@+id/ll_username"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tv_integral" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="" android:layout_below="@+id/tv_user_id" android:layout_alignLeft="@+id/tv_user_id"/>
            <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_rating_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:layout_below="@+id/tv_integral" android:layout_alignLeft="@+id/tv_user_id">
                <TextView android:textSize="12sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="综合评分："/>
                <RatingBar android:id="@+id/task_rat_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:isIndicator="true" style="@style/roomRatingBar"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tv_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5分"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/sp_15" android:textColor="@color/text_color_btn" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tv_followed" android:background="@color/bg_me_store" android:layout_width="71dp" android:layout_height="@dimen/dp_24" android:layout_marginTop="@dimen/dp_10" android:text="+ 关注" android:layout_below="@+id/ll_rating_bar" android:layout_alignLeft="@+id/tv_user_id"/>
            <TextView android:textSize="@dimen/sp_15" android:textColor="@color/text_color_btn" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/btn_contact" android:background="@color/bg_me_store" android:visibility="gone" android:layout_width="71dp" android:layout_height="@dimen/dp_24" android:layout_marginLeft="@dimen/dp_16" android:text="联系TA" android:layout_toRightOf="@+id/tv_followed" android:layout_alignTop="@+id/tv_followed"/>
            <TextView android:textSize="@dimen/sp_15" android:textColor="@color/text_color_btn" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/btn_black" android:background="@color/bg_me_store" android:visibility="gone" android:layout_width="71dp" android:layout_height="@dimen/dp_24" android:layout_marginLeft="@dimen/dp_16" android:text="屏蔽TA" android:layout_toRightOf="@+id/btn_contact" android:layout_below="@+id/tv_user_id" android:layout_alignTop="@+id/tv_followed"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout android:id="@+id/srl" android:layout_width="match_parent" android:layout_height="match_parent" app:srlEnableAutoLoadMore="true">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                    <TextView android:textSize="16sp" android:textColor="#ff333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dp_16" android:text="店铺数据统计"/>
                    <View android:layout_marginLeft="@dimen/dp_16" style="@style/line"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="@color/btn_task_dark" android:id="@+id/tv_bound_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="@color/btn_task_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保证金（元）"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="#ff333333" android:id="@+id/tv_pub_task_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发任务（个）"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="#ff333333" android:id="@+id/tv_total_bill" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="总发单（单）"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="#ff333333" android:id="@+id/tv_complete_bill" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="总成交（单）"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="#ff333333" android:id="@+id/tv_apply_bill" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="接任务（单）"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="#ff333333" android:id="@+id/tv_complainteds" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="被申诉（个）"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="17sp" android:textColor="#ff333333" android:id="@+id/tv_appeals" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="15sp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="申诉（次）"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcly_task" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>

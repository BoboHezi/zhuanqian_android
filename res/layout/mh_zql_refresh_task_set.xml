<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mh_zql_common_white_header_layout"/>
    <TextView android:textColor="@color/color_FF999999" android:paddingLeft="16dp" android:paddingTop="14dp" android:paddingRight="16dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="设置自动刷新后按照刷新频率定时刷新您的悬赏单排名，最后刷新的排在前面"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/mh_zql_bottom_line" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="刷新名称" android:minEms="4"/>
            <EditText android:textSize="@dimen/sp_14" android:textColor="@color/color_FF333333" android:textColorHint="@color/color_FF999999" android:id="@+id/tv_name" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="请输入自动刷新的名称" android:maxLength="10"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每天重复" android:minEms="4"/>
            <LinearLayout android:gravity="center_vertical" android:id="@+id/refresh_repeat_yes" android:layout_width="80dp" android:layout_height="match_parent">
                <ImageView android:id="@+id/img_refresh_repeat_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn"/>
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:text="是"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:id="@+id/refresh_repeat_no" android:layout_width="110dp" android:layout_height="match_parent">
                <ImageView android:id="@+id/img_refresh_repeat_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mh_zql_radio_task_btn"/>
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:text="否"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_start_time" android:background="@drawable/mh_zql_bottom_line" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开始时间" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_start_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:drawableRight="@mipmap/mh_zql_arrow"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_end_time" android:background="@drawable/mh_zql_bottom_line" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="结束时间" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_end_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:drawableRight="@mipmap/mh_zql_arrow"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_refresh_time" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="频率" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:id="@+id/tv_space_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:drawableRight="@mipmap/mh_zql_arrow"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_refresh_total" android:background="@drawable/mh_zql_bottom_line" android:paddingRight="@dimen/dp_12" android:visibility="gone" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="合计刷新次数" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:gravity="right" android:id="@+id/tv_refresh_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:layout_weight="1"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="次"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_refresh_surplus_count" android:background="@drawable/mh_zql_bottom_line" android:paddingRight="@dimen/dp_12" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="剩余刷新次数" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:gravity="right" android:id="@+id/tv_refresh_surplus_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:layout_weight="1"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="次"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_already" android:background="@drawable/mh_zql_bottom_line" android:paddingRight="@dimen/dp_12" android:visibility="gone" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已刷新次数" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:gravity="right" android:id="@+id/tv_refresh_already" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/btn_buy_time" android:background="@color/white" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="47dp">
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="购买刷新包" android:minEms="4"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:drawableRight="@mipmap/mh_zql_arrow"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="47dp">
        <TextView android:textSize="16sp" android:textColor="@color/color_FF333333" android:gravity="center" android:id="@+id/btn_cancel" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/common_dialog_cancel" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_color_btn" android:gravity="center" android:id="@+id/btn_sure" android:background="@color/btn_task_dark" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/common_dialog_confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

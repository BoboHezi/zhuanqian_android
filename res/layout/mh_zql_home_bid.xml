<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f6"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:background="@drawable/mh_zql_top_task_detail"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="77dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/mh_zql_white_shape"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <Button
                        android:id="@+id/btn_bid"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_24"
                        android:background="@drawable/mh_zql_chat_btn_send"
                        android:gravity="center"
                        android:text="我要出价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/ll_task"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/dp_16"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_type"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/tv_task_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/img_type"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="-2dp"
                            android:layout_toRightOf="@+id/img_type"
                            android:text="rebdfdf"
                            android:textColor="@color/color_FF333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_type"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/img_type"
                            android:background="@drawable/mh_zql_task_detail_type_label_gray"
                            android:textColor="@color/color_FF999999"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="12元"
                            android:textColor="@color/color_FF4343"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_rank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_type"
                            android:layout_toLeftOf="@+id/tv_rank"
                            android:text="当前排名："
                            android:textColor="@color/color_FF666666"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_type"
                            android:layout_alignParentRight="true"
                            android:text="12"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/mh_zql_compete_btn"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/mh_zql_compete_btn"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距离竞价结束："
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mh_zql_time_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/tv_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/mh_zql_time_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:text="："
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/tv_time_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mh_zql_time_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/tv_time_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/mh_zql_time_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:text="："
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/tv_time_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mh_zql_time_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/tv_time_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/mh_zql_time_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/btn_add_price"
                            android:layout_width="80dp"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@drawable/mh_zql_chat_btn_send"
                            android:gravity="center"
                            android:text="加价"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/btn_look_record"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_24"
                            android:paddingRight="@dimen/dp_24"
                            android:text="查看今日竞价"
                            android:textColor="@color/color_FF4343"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="2dp"
                    android:background="@color/color_FF333333" />

                <TextView
                    android:id="@+id/tv_bid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="2dp"
                    android:background="@color/color_FF333333" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_look_more"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="@color/color_FF4343"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_top_layout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/mh_zql_back_white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:singleLine="true"
                android:text="首页竞价"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical|center_horizontal|center"
                android:minWidth="@dimen/dp_100"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

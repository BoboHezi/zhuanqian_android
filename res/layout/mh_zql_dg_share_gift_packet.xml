<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/ll_union_content" android:layout_width="240dp" android:layout_height="wrap_content">
        <ImageView android:id="@+id/img_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" android:layout_alignBottom="@+id/tv_qr" android:layout_alignParentTop="true"/>
        <ImageView android:id="@+id/iv_user_header" android:layout_width="@dimen/dp_32" android:layout_height="@dimen/dp_32" android:layout_marginLeft="26dp" android:layout_marginTop="208dp" android:src="@mipmap/mh_zql_user_default"/>
        <TextView android:textSize="12sp" android:textColor="#ff323435" android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:text="" android:layout_toRightOf="@+id/iv_user_header" android:layout_alignTop="@+id/iv_user_header"/>
        <TextView android:textSize="10sp" android:textColor="#ff8c898a" android:id="@+id/tv_invite_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/tv_user_name" android:layout_alignBottom="@+id/iv_user_header"/>
        <TextView android:textSize="16sp" android:textColor="#ff4622" android:gravity="center" android:id="@+id/tv_invite_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="" android:layout_below="@+id/iv_user_header" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="10sp" android:textColor="#ff999999" android:id="@+id/tv_invite_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="我的邀请码" android:layout_below="@+id/tv_invite_code" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/img_qr_code" android:layout_width="71dp" android:layout_height="71dp" android:layout_marginTop="32dp" android:layout_below="@+id/tv_invite_tip" android:layout_centerHorizontal="true"/>
        <ImageView android:layout_width="@dimen/dp_16" android:layout_height="@dimen/dp_16" android:layout_marginTop="25dp" android:src="@mipmap/icon_logo" android:layout_alignTop="@+id/img_qr_code" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="7sp" android:textColor="#ff3b3839" android:id="@+id/tv_qr" android:paddingBottom="@dimen/dp_24" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:text="长按识别二维码赚钱" android:layout_below="@+id/img_qr_code" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_20">
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_save_qcode" android:background="@drawable/mh_zql_union_btn" android:layout_width="110dp" android:layout_height="34dp" android:text="保存图片"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_share" android:background="@drawable/mh_zql_union_btn" android:layout_width="110dp" android:layout_height="34dp" android:text="立即分享" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/btn_close" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:layout_marginTop="@dimen/dp_20" android:src="@mipmap/mh_zql_union_dg_close"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toTopOf="0" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="一只漂流的鱼"
        android:textColor="@color/color_FF333333"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/img_logo"
        app:layout_constraintTop_toTopOf="@+id/img_logo" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ID：335421"
        android:textColor="@color/color_FF333333"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_task_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ID：335421"
        android:textColor="@color/color_FF333333"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_user_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_id" />

    <TextView
        android:id="@+id/tv_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="报名时间：2021/04/11 14:00"
        android:textColor="@color/color_FF999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_task_count"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_count" />

    <TextView
        android:id="@+id/tv_commit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="报名时间：2021/04/11 14:00"
        android:textColor="@color/color_FF999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sign_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/mh_zql_order_task_btn_bg"
        android:gravity="center"
        android:text="审核"
        android:textColor="@color/color_FF4343"
        android:textSize="@dimen/sp_11"
        app:layout_constraintRight_toRightOf="0"
        app:layout_constraintTop_toTopOf="@+id/img_logo" />

    <TextView
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_commit_time" />
</androidx.constraintlayout.widget.ConstraintLayout>

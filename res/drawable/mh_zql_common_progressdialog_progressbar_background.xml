<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="17dp" />
            <gradient
                android:angle="0"
                android:centerColor="#fff4f4f4"
                android:centerY="0.75"
                android:endColor="#fff4f4f4"
                android:startColor="#fff4f4f4" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="17dp" />
                <gradient
                    android:angle="0"
                    android:endColor="#ffff4343"
                    android:startColor="#ffff4343" />
            </shape>
        </clip>
    </item>
</layer-list>

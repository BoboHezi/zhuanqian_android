<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#0f000000"
                android:startColor="#0f000000" />
            <corners android:radius="17dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#ff0070ff"
                android:startColor="#ff0070ff" />
            <corners android:radius="17dp" />
        </shape>
    </item>
</layer-list>

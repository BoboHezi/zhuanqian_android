<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f6"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:background="@drawable/yd_xo_top_task_detail"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="89dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="37dp"
                        android:text="微信扫码助力秒过"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:id="@+id/ll_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_task_title"
                        android:layout_alignLeft="@+id/tv_task_title"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_packet_flag"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/yd_xo_packet_1"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:text="助力"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:text="小小优趣"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | 评分："
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/task_rat_bar"
                            style="@style/roomRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:progress="100" />

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cur_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_task_title"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_16">

                        <TextView
                            android:id="@+id/tv_money_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/color_FF4343"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5"
                            android:textColor="@color/color_FF4343"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_white_member_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_task_title"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="会员价¥"
                            android:textColor="@color/color_FF4343"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_white_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffff4343"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_cur_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ll_type"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text=""
                        android:textColor="#ff999999"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_time_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_type"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_task_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_task_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="任务编号："
                                android:textColor="#ffbcbfc2"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginLeft="7.5dp"
                                android:background="@drawable/yd_xo_task_public"
                                android:gravity="center"
                                android:text="复制"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:paddingBottom="@dimen/dp_16">

                            <LinearLayout
                                android:id="@+id/ll_bag"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_bag_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ff333333"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="任务基数"
                                    android:textColor="#ff999999"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:id="@+id/tv_line_bag"
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#cecece"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_reminding_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textColor="#ff333333"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/tv_task_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="剩余数量"
                                    android:textColor="#ff999999"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#cecece" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_finish_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29"
                                    android:textColor="#ff333333"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="完成数量"
                                    android:textColor="#ff999999"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#cecece" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tv_time_limit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#ff333333"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/tv_time_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1小时"
                                        android:textColor="#ff333333"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="做单时间"
                                    android:textColor="#ff999999"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:background="#cecece" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tv_check_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#ff333333"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/tv_check_day_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1天"
                                        android:textColor="#ff333333"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="审核时间"
                                    android:textColor="#ff999999"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/ll_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_time_info"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_12">

                        <TextView style="@style/line" />

                        <TextView
                            android:id="@+id/tv_appeal_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:drawableLeft="@mipmap/yd_xo_detail_appeal"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text="申诉成功数：0"
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_device"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_12"
                            android:drawableLeft="@mipmap/yd_xo_detail_mobile"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_repeat_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_appeal_count"
                            android:layout_marginTop="@dimen/dp_10"
                            android:drawableLeft="@mipmap/yd_xo_detail_time"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_info"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/ll_pro_des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="@dimen/dp_16"
                            android:visibility="gone">

                            <TextView style="@style/line" />

                            <TextView
                                android:id="@+id/tv_pro_lab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:drawableLeft="@mipmap/yd_xo_detail_assurance"
                                android:gravity="center"
                                android:text="保号说明"
                                android:textColor="@color/color_FF333333"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_pro_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_pro_lab"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_FF666666"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_super_task_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="@dimen/dp_16"
                            android:visibility="gone">

                            <TextView style="@style/line" />

                            <TextView
                                android:id="@+id/tv_super_lab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:drawableLeft="@mipmap/yd_xo_detail_super_up"
                                android:gravity="center"
                                android:text="上级任务"
                                android:textColor="@color/color_FF333333"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_super_task_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_super_lab"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="登录送三元秒审"
                                android:textColor="#ff333333"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_super_task_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_super_task_name"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_FF999999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_super_task_status"
                                android:layout_width="80dp"
                                android:layout_height="@dimen/dp_28"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_16"
                                android:background="@drawable/yd_xo_task_public"
                                android:gravity="center"
                                android:text="去完成"
                                android:textColor="#ffffffff"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_user_header"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="60dp"
                    android:src="@mipmap/yd_xo_withdrawal_wx" />

                <ImageView
                    android:id="@+id/iv_member"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@+id/img_user_header"
                    android:layout_alignBottom="@+id/img_user_header"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="71dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="#f28588"
                    android:gravity="center"
                    android:text="+ 关注"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_member_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_member_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员价"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/color_FF4343"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_member_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_FF4343"
                        android:textSize="22sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_member_money_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_member_money"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text=""
                    android:textColor="#ff999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_open_member"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yd_xo_task_public"
                    android:gravity="center"
                    android:text="开通会员"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/ll_bag_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="16dp"
                android:paddingRight="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/yd_xo_task_bag_tip"
                    android:drawablePadding="@dimen/dp_2"
                    android:gravity="center"
                    android:text="众包任务"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="此任务为众包任务，众包任务是一次性在线接多单的任务。比如设置众包基数（如5单，10单，20单等），接单人报名做单后，一次性可以提交5单，10单，20单等。"
                    android:textColor="@color/color_FF666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="13dp"
                    android:background="#dbdbdb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="16dp"
                android:paddingRight="13dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/yd_xo_detail_do_explain"
                    android:drawablePadding="@dimen/dp_2"
                    android:gravity="center"
                    android:text="做单说明"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_task_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_FF666666"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:drawableRight="@mipmap/yd_xo_play_video"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="@dimen/dp_16"
                    android:text="做单视频"
                    android:textColor="@color/color_FF333333" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/yd_xo_me_arrow_icon" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_do_task_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="13dp"
                    android:paddingTop="16dp"
                    android:paddingRight="13dp"
                    android:text=""
                    android:textColor="@color/color_FF333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_step_share"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/yd_xo_task_public"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="做单要求"
                    android:textColor="@color/text_color_btn"
                    android:textSize="@dimen/dp_13"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_task_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="13dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/yd_xo_detail_task_explain" />

                    <TextView
                        android:id="@+id/tv_remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="任务说明："
                        android:textColor="@color/color_FF4343" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingBottom="20dp" />

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#f3f3f3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务评价"
                        android:textColor="@color/color_FF333333"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/btn_more_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/yd_xo_me_arrow_icon"
                        android:gravity="right"
                        android:text="更多评价"
                        android:textColor="@color/color_FF333333" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/yd_xo_back_white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:singleLine="true"
                android:text="任务详情"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical|center_horizontal|center"
                android:minWidth="@dimen/dp_100"
                android:paddingRight="@dimen/dp_16">

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yd_xo_more" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f4f4f6"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_change_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/yd_xo_change_task"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="换一个"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/btn_contact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/yd_xo_task_contact"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="联系悬赏主"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_grab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/btn_task_dark"
            android:gravity="center"
            android:text="点击报名"
            android:textColor="@color/text_color_btn"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FF4343"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
